<% layout("/layouts/boilerplate") -%>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-card {
    max-width: 500px;
    text-align: center;
    padding: 3rem 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    border: none;
  }

  .error-icon {
    font-size: 4rem;
    color: #dc3545;
    margin-bottom: 1rem;
  }

  .error-title {
    color: #dc3545;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .error-message {
    color: #666;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .back-btn {
    border-radius: 50px;
    padding: 0.75rem 2rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
</style>

<div class="error-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card error-card">
          <div class="card-body">
            <i class="fas fa-exclamation-triangle error-icon"></i>
            <h3 class="error-title">Oops! Something went wrong</h3>
            <p class="error-message"><%= message || "An unexpected error occurred. Please try again later." %></p>

            <div class="d-grid gap-2">
              <button onclick="history.back()" class="btn btn-outline-primary back-btn">
                <i class="fas fa-arrow-left me-2"></i>Go Back
              </button>
              <a href="/home" class="btn btn-primary back-btn">
                <i class="fas fa-home me-2"></i>Go to Homepage
              </a>
            </div>

            <div class="mt-4">
              <p class="text-muted small mb-2">Need help? Contact us:</p>
              <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-muted">
                  <i class="fab fa-facebook fa-lg"></i>
                </a>
                <a href="#" class="text-muted">
                  <i class="fab fa-twitter fa-lg"></i>
                </a>
                <a href="#" class="text-muted">
                  <i class="fas fa-envelope fa-lg"></i>
                </a>
                <a href="#" class="text-muted">
                  <i class="fas fa-phone fa-lg"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
