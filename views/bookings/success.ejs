<% layout("/layouts/boilerplate") -%>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-check-circle text-success fa-4x mb-3"></i>
          <h3 class="card-title">Booking Confirmed!</h3>
          <p class="card-text">Your booking has been successfully confirmed.</p>
          <p class="card-text">Booking ID: <%= booking._id %></p>
          <% if (booking.type === 'listing') { %>
            <p>Stay at <%= booking.listing.title %></p>
            <p>From <%= booking.startDate.toLocaleDateString() %> to <%= booking.endDate.toLocaleDateString() %></p>
          <% } else if (booking.type === 'dhaba') { %>
            <p>Table at <%= booking.dhaba.title %></p>
            <p>On <%= booking.date.toLocaleDateString() %> at <%= booking.time %></p>
          <% } else if (booking.type === 'vehicle') { %>
            <p>Rental of <%= booking.vehicle.title %></p>
            <p>From <%= booking.startDate.toLocaleDateString() %> <%= booking.startTime %> to <%= booking.endDate.toLocaleDateString() %> <%= booking.endTime %></p>
          <% } %>
          <a href="/bookings/user" class="btn btn-primary">View My Bookings</a>
        </div>
      </div>
    </div>
  </div>
</div>
