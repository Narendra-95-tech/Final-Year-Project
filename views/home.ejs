          <script>
            document.addEventListener('DOMContentLoaded', function () {
              // Initialize AOS
              if (typeof AOS !== 'undefined') {
                AOS.init({
                  duration: 800,
                  easing: 'ease-out-cubic',
                  once: true,
                  offset: 50
                });
              }

              // Initialize Flatpickr
              flatpickr("#date-range", {
                mode: "range",
                minDate: "today",
                dateFormat: "Y-m-d",
                disableMobile: "true",
                onChange: function (selectedDates, dateStr, instance) {
                  if (selectedDates.length === 2) {
                    const start = instance.formatDate(selectedDates[0], "Y-m-d");
                    const end = instance.formatDate(selectedDates[1], "Y-m-d");
                    document.getElementById('startDate').value = start;
                    document.getElementById('endDate').value = end;
                  }
                }
              });

              // ========================================
              // 1. CINEMATIC VIDEO HERO ‚Äî Fade in on load
              // ========================================
              const heroVideo = document.getElementById('hero-video');
              if (heroVideo) {
                heroVideo.addEventListener('canplaythrough', () => {
                  heroVideo.classList.add('loaded');
                });
                // Fallback: fade in after 2s regardless
                setTimeout(() => heroVideo.classList.add('loaded'), 2000);
              }

              // ========================================
              // 2. TYPEWRITER ANIMATION ‚Äî Subtitle cycling
              // ========================================
              const typewriterEl = document.getElementById('typewriter-text');
              if (typewriterEl) {
                const phrases = [
                  'Book unique stays',
                  'Rent local vehicles',
                  'Discover authentic Dhabas',
                  'Plan your trip with AI',
                  'Explore India your way'
                ];
                let phraseIndex = 0;
                let charIndex = 0;
                let isDeleting = false;
                let typingSpeed = 80;

                function typeWriter() {
                  const currentPhrase = phrases[phraseIndex];
                  if (isDeleting) {
                    typewriterEl.textContent = currentPhrase.substring(0, charIndex - 1);
                    charIndex--;
                    typingSpeed = 40;
                  } else {
                    typewriterEl.textContent = currentPhrase.substring(0, charIndex + 1);
                    charIndex++;
                    typingSpeed = 80;
                  }

                  if (!isDeleting && charIndex === currentPhrase.length) {
                    // Pause at end of word
                    typingSpeed = 1800;
                    isDeleting = true;
                  } else if (isDeleting && charIndex === 0) {
                    isDeleting = false;
                    phraseIndex = (phraseIndex + 1) % phrases.length;
                    typingSpeed = 400;
                  }
                  setTimeout(typeWriter, typingSpeed);
                }
                // Start after a small delay so hero is visible
                setTimeout(typeWriter, 1000);
              }

              // ========================================
              // 3. ANIMATED STATS COUNTER
              // ========================================
              const statNumbers = document.querySelectorAll('.stat-number[data-target]');
              let countersStarted = false;

              function animateCounters() {
                statNumbers.forEach(el => {
                  const target = parseInt(el.getAttribute('data-target'), 10);
                  const suffix = target >= 1000 ? 'K+' : '+';
                  const displayTarget = target >= 1000 ? target / 1000 : target;
                  const duration = 2000;
                  const steps = 60;
                  const increment = displayTarget / steps;
                  let current = 0;
                  const timer = setInterval(() => {
                    current += increment;
                    if (current >= displayTarget) {
                      el.textContent = displayTarget + suffix;
                      clearInterval(timer);
                    } else {
                      el.textContent = (target >= 1000
                        ? current.toFixed(1)
                        : Math.floor(current)) + suffix;
                    }
                  }, duration / steps);
                });
              }

              // ========================================
              // 4. CARD IMAGE CAROUSEL
              // ========================================
              window.slideCard = function (e, btn, direction) {
                e.preventDefault();
                e.stopPropagation();
                const carousel = btn.closest('[data-card-carousel]');
                const track = carousel.querySelector('.carousel-track');
                const slides = carousel.querySelectorAll('.carousel-slide');
                const dots = carousel.querySelectorAll('.carousel-dot');
                const total = slides.length;
                let current = parseInt(track.dataset.current || '0', 10);
                current += direction;
                if (current < 0) current = total - 1;
                if (current >= total) current = 0;
                track.style.transform = `translateX(-${current * 100}%)`;
                track.dataset.current = current;
                dots.forEach((d, i) => d.classList.toggle('active', i === current));
              };

              // ========================================
              // 5. WISHLIST HEART MICRO-ANIMATION
              // ========================================
              const originalToggleWishlist = window.toggleWishlist;
              window.toggleWishlist = function (e, id, type) {
                e.preventDefault();
                e.stopPropagation();
                const heartEl = e.currentTarget;

                // Toggle active state
                const isNowActive = !heartEl.classList.contains('active');
                heartEl.classList.toggle('active', isNowActive);

                // Switch icon
                const icon = heartEl.querySelector('i');
                if (icon) {
                  icon.className = isNowActive ? 'fas fa-heart' : 'far fa-heart';
                }

                // Pop animation
                heartEl.classList.remove('animating');
                void heartEl.offsetWidth; // Force reflow
                heartEl.classList.add('animating');
                setTimeout(() => heartEl.classList.remove('animating'), 500);

                // Burst particles
                if (isNowActive) {
                  const burst = document.createElement('div');
                  burst.className = 'heart-burst';
                  for (let i = 0; i < 6; i++) {
                    const particle = document.createElement('span');
                    const angle = (i / 6) * 360;
                    const distance = 15 + Math.random() * 10;
                    particle.style.setProperty('--tx', `${Math.cos(angle * Math.PI / 180) * distance}px`);
                    particle.style.setProperty('--ty', `${Math.sin(angle * Math.PI / 180) * distance}px`);
                    particle.style.background = ['#FF385C', '#ff6b81', '#ff9a5c', '#ffd700'][Math.floor(Math.random() * 4)];
                    burst.appendChild(particle);
                  }
                  heartEl.appendChild(burst);
                  setTimeout(() => burst.remove(), 700);
                }

                // Call original handler if exists
                if (typeof originalToggleWishlist === 'function') {
                  try { originalToggleWishlist(e, id, type); } catch (err) { }
                }
              };

              // Trigger counter when stats section enters viewport
              const statsSection = document.querySelector('.stats-section');
              if (statsSection && 'IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                  if (entries[0].isIntersecting && !countersStarted) {
                    countersStarted = true;
                    animateCounters();
                    observer.disconnect();
                  }
                }, { threshold: 0.3 });
                observer.observe(statsSection);
              } else if (statsSection) {
                animateCounters();
              }

              // ========================================
              // 6. PAGE PRELOADER ‚Äî Dismiss after load
              // ========================================
              var preloader = document.getElementById('pagePreloader');
              if (preloader) {
                setTimeout(function () {
                  preloader.classList.add('hidden');
                  setTimeout(function () { preloader.remove(); }, 600);
                }, 1300);
              }

              // ========================================
              // 7. TESTIMONIALS ‚Äî Duplicate for seamless infinite scroll
              // ========================================
              var track = document.getElementById('testimonialsTrack');
              if (track) {
                track.innerHTML = track.innerHTML + track.innerHTML;
              }
            });
          </script>

          <script>
            function switchSearchTab(btn, type) {
              // Update active tab UI
              document.querySelectorAll('.search-tab').forEach(tab => tab.classList.remove('active'));
              btn.classList.add('active');

              // Update form context
              const form = document.getElementById('hero-search-form');
              const input = document.getElementById('hero-search-input');
              const icon = document.getElementById('search-icon');

              if (type === 'global') {
                form.action = '/search';
