<% layout("/layouts/boilerplate") -%>

  <style>
    /* ===== PREMIUM HERO SECTION ===== */
    .hero-section {
      position: relative;
      height: 90vh;
      min-height: 700px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--white);
      text-align: center;
      background: #0a0a0a;
      margin-top: -1.5rem;
      overflow: hidden;
    }

    /* Cinematic Video Background */
    .hero-video {
      position: absolute;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      transform: translate(-50%, -50%);
      object-fit: cover;
      z-index: 0;
      opacity: 0;
      transition: opacity 1.5s ease;
    }

    .hero-video.loaded {
      opacity: 1;
    }

    /* Typewriter cursor blink */
    .typewriter-cursor {
      display: inline-block;
      width: 3px;
      height: 1.6rem;
      background: #ff9a5c;
      margin-left: 4px;
      vertical-align: middle;
      animation: blink-cursor 0.75s step-end infinite;
      border-radius: 2px;
    }

    @keyframes blink-cursor {

      0%,
      100% {
        opacity: 1;
      }

      50% {
        opacity: 0;
      }
    }

    /* ===== ANIMATED STATS COUNTER SECTION ===== */
    .stats-section {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
      padding: 4rem 0;
      position: relative;
      overflow: hidden;
    }

    .stats-section::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at 30% 50%, rgba(253, 126, 20, 0.12) 0%, transparent 50%),
        radial-gradient(circle at 70% 50%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
      animation: stats-bg-move 8s ease-in-out infinite alternate;
    }

    @keyframes stats-bg-move {
      from {
        transform: translate(0, 0);
      }

      to {
        transform: translate(2%, 2%);
      }
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
      position: relative;
      z-index: 1;
    }

    @media (max-width: 768px) {
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 480px) {
      .stats-grid {
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
      }
    }

    .stat-card {
      text-align: center;
      padding: 2rem 1rem;
      border-radius: 20px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      transition: transform 0.3s ease, background 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-8px);
      background: rgba(255, 255, 255, 0.1);
    }

    .stat-emoji {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      display: block;
      animation: float 3s ease-in-out infinite;
    }

    .stat-card:nth-child(2) .stat-emoji {
      animation-delay: 0.5s;
    }

    .stat-card:nth-child(3) .stat-emoji {
      animation-delay: 1s;
    }

    .stat-card:nth-child(4) .stat-emoji {
      animation-delay: 1.5s;
    }

    @keyframes float {

      0%,
      100% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(-8px);
      }
    }

    .stat-number {
      font-size: 3rem;
      font-weight: 900;
      background: linear-gradient(135deg, #fd7e14, #ff9a5c);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      line-height: 1;
      margin: 0.5rem 0 0.25rem;
      display: block;
    }

    .stat-label-text {
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.65);
      font-weight: 500;
      letter-spacing: 0.5px;
    }

    /* ===== AI TRIP PLANNER CTA BANNER ===== */
    .ai-cta-banner {
      background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 50%, #9333ea 100%);
      padding: 5rem 0;
      position: relative;
      overflow: hidden;
    }

    .ai-cta-banner::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image:
        radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.08) 0%, transparent 40%),
        radial-gradient(circle at 80% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 40%);
    }

    .ai-cta-banner .ai-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(60px);
      opacity: 0.3;
      animation: orb-float 6s ease-in-out infinite alternate;
    }

    .ai-orb-1 {
      width: 300px;
      height: 300px;
      background: #f0abfc;
      top: -100px;
      right: 10%;
    }

    .ai-orb-2 {
      width: 200px;
      height: 200px;
      background: #a5f3fc;
      bottom: -80px;
      left: 5%;
      animation-delay: 2s;
    }

    @keyframes orb-float {
      from {
        transform: translate(0, 0) scale(1);
      }

      to {
        transform: translate(20px, 15px) scale(1.1);
      }
    }

    .ai-cta-inner {
      position: relative;
      z-index: 2;
      text-align: center;
      max-width: 750px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .ai-cta-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.25);
      color: white;
      padding: 0.4rem 1.2rem;
      border-radius: 999px;
      font-size: 0.85rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      margin-bottom: 1.5rem;
      backdrop-filter: blur(4px);
    }

    .ai-cta-title {
      font-size: clamp(2rem, 5vw, 3.25rem);
      font-weight: 900;
      color: white;
      line-height: 1.15;
      margin-bottom: 1.25rem;
      letter-spacing: -1px;
    }

    .ai-cta-subtitle {
      font-size: 1.15rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 2.5rem;
      line-height: 1.6;
    }

    .ai-cta-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: white;
      color: #4f46e5;
      padding: 1rem 2.5rem;
      border-radius: 999px;
      font-weight: 800;
      font-size: 1.1rem;
      text-decoration: none;
      border: none;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
    }

    .ai-cta-btn:hover {
      transform: translateY(-4px) scale(1.03);
      box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
      color: #4f46e5;
      text-decoration: none;
    }

    .ai-cta-btn i {
      font-size: 1.2rem;
    }

    .ai-features-row {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 2.5rem;
      flex-wrap: wrap;
    }

    .ai-feature-chip {
      display: flex;
      align-items: center;
      gap: 0.4rem;
      color: rgba(255, 255, 255, 0.75);
      font-size: 0.9rem;
      font-weight: 500;
    }

    .ai-feature-chip i {
      color: #a5f3fc;
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(to bottom,
          rgba(0, 0, 0, 0.2) 0%,
          rgba(0, 0, 0, 0.4) 50%,
          rgba(0, 0, 0, 0.6) 100%);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      width: 100%;
      max-width: 1000px;
      /* Wider for punchy title */
      padding: 0 1.5rem;
    }

    .hero-title {
      font-size: 5rem;
      /* Massive, punchy title */
      font-weight: 900;
      margin-bottom: 1.5rem;
      letter-spacing: -2px;
      line-height: 1.1;
      background: linear-gradient(135deg, #fff 30%, #ffd0a8 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
      animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-subtitle {
      font-size: 1.75rem;
      font-weight: 500;
      margin-bottom: 3.5rem;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      opacity: 0.95;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Tabbed Search Bar - Glass Perfection */
    .search-tabs {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 0.75rem;
    }

    .search-tab {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--white);
      padding: 0.6rem 1.5rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all var(--transition-normal);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-tab:hover {
      background: rgba(255, 255, 255, 0.25);
    }

    .search-tab.active {
      background: var(--white);
      color: var(--gray-900);
      border-color: var(--white);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .search-container {
      max-width: 950px;
      margin: 0 auto;
      padding: 0.75rem;
      border-radius: var(--radius-full);
      display: flex;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
      transition: all 0.3s ease;
    }

    .search-container:focus-within {
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.6);
      border-color: var(--white);
    }

    .search-input-group {
      flex: 1;
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 0 1.5rem;
      border-right: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.2s ease;
    }

    .search-container:focus-within .search-input-group {
      border-right-color: rgba(0, 0, 0, 0.1);
    }

    .search-input-group:last-child {
      border-right: none;
    }

    .search-field-wrapper {
      display: flex;
      flex-direction: column;
      align-items: start;
      width: 100%;
    }

    .search-label {
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--gray-500);
      margin-bottom: 2px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .search-input {
      width: 100%;
      border: none;
      background: transparent;
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--gray-900);
      padding: 0;
      outline: none;
    }

    .search-input::placeholder {
      color: var(--gray-400);
      font-weight: 400;
    }

    @media (max-width: 768px) {
      .search-container {
        flex-direction: column;
        border-radius: 20px;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.95);
      }

      .search-input-group {
        border-right: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding: 1rem 0;
        width: 100%;
      }

      .search-input-group:last-of-type {
        border-bottom: none;
      }

      .btn-search {
        width: 100%;
        border-radius: 12px;
        margin-top: 10px;
      }
    }


    .btn-search {
      background: var(--primary-orange);
      color: var(--white);
      border: none;
      border-radius: var(--radius-full);
      padding: 0 2.5rem;
      font-weight: 700;
      font-size: 1.1rem;
      height: 60px;
      transition: all var(--transition-normal);
    }

    .btn-search:hover {
      background: var(--primary-orange-hover);
      transform: scale(1.02);
      box-shadow: 0 8px 20px rgba(253, 126, 20, 0.4);
    }

    /* Section Title Styling */
    .premium-section-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: var(--gray-900);
    }

    .premium-section-subtitle {
      font-size: 1.1rem;
      color: var(--gray-500);
      margin-bottom: 3rem;
    }

    /* Enhanced Card Styling */
    .premium-card {
      border: 1px solid rgba(0, 0, 0, 0.05);
      /* Subtle border for definition */
      border-radius: var(--radius-2xl);
      overflow: hidden;
      background: var(--white);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05);
      transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
      height: 100%;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .premium-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 30px 60px -15px rgba(0, 0, 0, 0.15);
      border-color: rgba(254, 107, 0, 0.1);
    }

    .card-img-wrapper {
      position: relative;
      overflow: hidden;
      padding-top: 66.67%;
      /* 3:2 Aspect Ratio */
    }

    .card-img-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .premium-card:hover .card-img-wrapper img {
      transform: scale(1.1);
    }

    .card-wishlist {
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 36px;
      height: 36px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(4px);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--gray-400);
      cursor: pointer;
      transition: all var(--transition-fast);
      z-index: 10;
    }

    .card-wishlist:hover {
      color: var(--secondary-red);
      transform: scale(1.1);
    }

    .card-wishlist.active {
      color: var(--secondary-red);
    }

    .card-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: var(--white);
      color: var(--gray-900);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      box-shadow: var(--shadow-sm);
      z-index: 10;
    }

    .premium-card-body {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-location {
      font-size: 0.9rem;
      color: var(--gray-500);
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .card-listing-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--gray-900);
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }

    .card-price-wrapper {
      margin-top: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .card-price {
      font-size: 1.1rem;
      font-weight: 800;
      color: var(--gray-900);
    }

    .card-price span {
      font-weight: 400;
      color: var(--gray-500);
      font-size: 0.9rem;
    }

    /* Trust Section */
    .trust-section {
      padding: 6rem 0;
      background-color: var(--white);
    }

    .trust-item {
      text-align: center;
      padding: 2rem;
    }

    .trust-icon {
      width: 64px;
      height: 64px;
      background: var(--primary-orange-light);
      color: var(--primary-orange);
      border-radius: var(--radius-xl);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
      margin: 0 auto 1.5rem;
      transition: all var(--transition-normal);
    }

    .trust-item:hover .trust-icon {
      background: var(--primary-orange);
      color: var(--white);
      transform: rotateY(180deg);
    }

    @media (max-width: 991px) {
      .hero-title {
        font-size: 3rem;
      }

      .hero-subtitle {
        font-size: 1.25rem;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        height: 75vh;
      }

      .hero-title {
        font-size: 2.25rem;
      }

      .search-container {
        flex-direction: column;
        border-radius: var(--radius-2xl);
      }

      .btn-search {
        width: 100%;
        height: 50px;
      }
    }

    /* Storytelling Section */
    .story-section {
      padding: 6rem 0;
      background: var(--gray-50);
    }

    .story-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-top: 3rem;
    }

    .story-card {
      position: relative;
      height: 500px;
      border-radius: var(--radius-2xl);
      overflow: hidden;
      cursor: pointer;
      box-shadow: var(--shadow-lg);
      transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .story-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
    }

    .story-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.7s ease;
    }

    .story-card:hover .story-img {
      transform: scale(1.1);
    }

    .story-overlay {
      position: absolute;
      bottom: 1.5rem;
      left: 1.5rem;
      right: 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 1.5rem;
      border-radius: var(--radius-xl);
      color: var(--white);
      transition: all 0.3s ease;
      z-index: 2;
    }

    .story-card:hover .story-overlay {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-5px);
    }

    .story-category {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      color: var(--primary-orange);
    }

    .story-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .story-desc {
      font-size: 0.9rem;
      opacity: 0.9;
      line-height: 1.4;
    }

    @media (max-width: 992px) {
      .story-grid {
        grid-template-columns: 1fr;
      }

      .story-card {
        height: 400px;
      }
    }

    /* Fast-Category Hub */
    .category-hub {
      padding: 1.5rem 0;
      background: var(--white);
      border-bottom: 1px solid var(--gray-200);
      position: sticky;
      top: 0;
      z-index: 100;
      margin-bottom: 2rem;
    }

    .category-wrapper {
      display: flex;
      gap: 2.5rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE 10+ */
    }

    .category-wrapper::-webkit-scrollbar {
      display: none;
      /* Safari and Chrome */
    }

    .category-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      min-width: fit-content;
      color: var(--gray-500);
      cursor: pointer;
      transition: all var(--transition-normal);
      opacity: 0.7;
      text-decoration: none !important;
    }

    .category-item i {
      font-size: 1.25rem;
    }

    .category-item span {
      font-size: 0.75rem;
      font-weight: 600;
      white-space: nowrap;
    }

    .category-item:hover {
      color: var(--gray-900);
      opacity: 1;
      transform: translateY(-2px);
    }

    .category-item.active {
      color: var(--primary-orange);
      opacity: 1;
      position: relative;
    }

    .category-item.active::after {
      content: '';
      position: absolute;
      bottom: -1rem;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--primary-orange);
    }

    /* Local Legends Section */
    .legends-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, #fff 0%, #fef1ed 100%);
    }

    .legend-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: var(--radius-2xl);
      padding: 2rem;
      text-align: center;
      transition: all var(--transition-normal);
      height: 100%;
      position: relative;
    }

    .legend-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
      background: var(--white);
    }

    .legend-avatar-wrapper {
      position: relative;
      width: 100px;
      height: 100px;
      margin: 0 auto 1.5rem;
    }

    .legend-avatar {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid var(--white);
      box-shadow: var(--shadow-md);
    }

    .legend-badge {
      position: absolute;
      bottom: 0;
      right: 0;
      background: linear-gradient(45deg, #ffd700, #ffa500);
      color: var(--white);
      width: 28px;
      height: 28px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      border: 2px solid var(--white);
