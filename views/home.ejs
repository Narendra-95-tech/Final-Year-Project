<% layout("/layouts/boilerplate") -%>

  <style>
    /* ===== PREMIUM HERO SECTION ===== */
    .hero-section {
      position: relative;
      height: 90vh;
      /* Slightly taller for more impact */
      min-height: 700px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--white);
      text-align: center;
      background: url('/images/hero-bg.png') center/cover no-repeat;
      margin-top: -1.5rem;
      overflow: hidden;
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(to bottom,
          rgba(0, 0, 0, 0.2) 0%,
          rgba(0, 0, 0, 0.4) 50%,
          rgba(0, 0, 0, 0.6) 100%);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      width: 100%;
      max-width: 1000px;
      /* Wider for punchy title */
      padding: 0 1.5rem;
    }

    .hero-title {
      font-size: 5rem;
      /* Massive, punchy title */
      font-weight: 900;
      margin-bottom: 1.5rem;
      letter-spacing: -2px;
      line-height: 1.1;
      background: linear-gradient(135deg, #fff 30%, #ffd0a8 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
      animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-subtitle {
      font-size: 1.75rem;
      font-weight: 500;
      margin-bottom: 3.5rem;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      opacity: 0.95;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Tabbed Search Bar - Glass Perfection */
    .search-tabs {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 0.75rem;
    }

    .search-tab {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--white);
      padding: 0.6rem 1.5rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all var(--transition-normal);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-tab:hover {
      background: rgba(255, 255, 255, 0.25);
    }

    .search-tab.active {
      background: var(--white);
      color: var(--gray-900);
      border-color: var(--white);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .search-container {
      max-width: 950px;
      margin: 0 auto;
      padding: 0.75rem;
      border-radius: var(--radius-full);
      display: flex;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
      transition: all 0.3s ease;
    }

    .search-container:focus-within {
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.6);
      border-color: var(--white);
    }

    .search-input-group {
      flex: 1;
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 0 1.5rem;
      border-right: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.2s ease;
    }

    .search-container:focus-within .search-input-group {
      border-right-color: rgba(0, 0, 0, 0.1);
    }

    .search-input-group:last-child {
      border-right: none;
    }

    .search-field-wrapper {
      display: flex;
      flex-direction: column;
      align-items: start;
      width: 100%;
    }

    .search-label {
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--gray-500);
      margin-bottom: 2px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .search-input {
      width: 100%;
      border: none;
      background: transparent;
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--gray-900);
      padding: 0;
      outline: none;
    }

    .search-input::placeholder {
      color: var(--gray-400);
      font-weight: 400;
    }

    @media (max-width: 768px) {
      .search-container {
        flex-direction: column;
        border-radius: 20px;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.95);
      }

      .search-input-group {
        border-right: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding: 1rem 0;
        width: 100%;
      }

      .search-input-group:last-of-type {
        border-bottom: none;
      }

      .btn-search {
        width: 100%;
        border-radius: 12px;
        margin-top: 10px;
      }
    }


    .btn-search {
      background: var(--primary-orange);
      color: var(--white);
      border: none;
      border-radius: var(--radius-full);
      padding: 0 2.5rem;
      font-weight: 700;
      font-size: 1.1rem;
      height: 60px;
      transition: all var(--transition-normal);
    }

    .btn-search:hover {
      background: var(--primary-orange-hover);
      transform: scale(1.02);
      box-shadow: 0 8px 20px rgba(253, 126, 20, 0.4);
    }

    /* Section Title Styling */
    .premium-section-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: var(--gray-900);
    }

    .premium-section-subtitle {
      font-size: 1.1rem;
      color: var(--gray-500);
      margin-bottom: 3rem;
    }

    /* Enhanced Card Styling */
    .premium-card {
      border: 1px solid rgba(0, 0, 0, 0.05);
      /* Subtle border for definition */
      border-radius: var(--radius-2xl);
      overflow: hidden;
      background: var(--white);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05);
      transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
      height: 100%;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .premium-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 30px 60px -15px rgba(0, 0, 0, 0.15);
      border-color: rgba(254, 107, 0, 0.1);
    }

    .card-img-wrapper {
      position: relative;
      overflow: hidden;
      padding-top: 66.67%;
      /* 3:2 Aspect Ratio */
    }

    .card-img-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .premium-card:hover .card-img-wrapper img {
      transform: scale(1.1);
    }

    .card-wishlist {
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 36px;
      height: 36px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(4px);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--gray-400);
      cursor: pointer;
      transition: all var(--transition-fast);
      z-index: 10;
    }

    .card-wishlist:hover {
      color: var(--secondary-red);
      transform: scale(1.1);
    }

    .card-wishlist.active {
      color: var(--secondary-red);
    }

    .card-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: var(--white);
      color: var(--gray-900);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      box-shadow: var(--shadow-sm);
      z-index: 10;
    }

    .premium-card-body {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-location {
      font-size: 0.9rem;
      color: var(--gray-500);
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .card-listing-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--gray-900);
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }

    .card-price-wrapper {
      margin-top: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .card-price {
      font-size: 1.1rem;
      font-weight: 800;
      color: var(--gray-900);
    }

    .card-price span {
      font-weight: 400;
      color: var(--gray-500);
      font-size: 0.9rem;
    }

    /* Trust Section */
    .trust-section {
      padding: 6rem 0;
      background-color: var(--white);
    }

    .trust-item {
      text-align: center;
      padding: 2rem;
    }

    .trust-icon {
      width: 64px;
      height: 64px;
      background: var(--primary-orange-light);
      color: var(--primary-orange);
      border-radius: var(--radius-xl);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
      margin: 0 auto 1.5rem;
      transition: all var(--transition-normal);
    }

    .trust-item:hover .trust-icon {
      background: var(--primary-orange);
      color: var(--white);
      transform: rotateY(180deg);
    }

    @media (max-width: 991px) {
      .hero-title {
        font-size: 3rem;
      }

      .hero-subtitle {
        font-size: 1.25rem;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        height: 75vh;
      }

      .hero-title {
        font-size: 2.25rem;
      }

      .search-container {
        flex-direction: column;
        border-radius: var(--radius-2xl);
      }

      .btn-search {
        width: 100%;
        height: 50px;
      }
    }

    /* Storytelling Section */
    .story-section {
      padding: 6rem 0;
      background: var(--gray-50);
    }

    .story-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-top: 3rem;
    }

    .story-card {
      position: relative;
      height: 500px;
      border-radius: var(--radius-2xl);
      overflow: hidden;
      cursor: pointer;
      box-shadow: var(--shadow-lg);
      transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .story-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
    }

    .story-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.7s ease;
    }

    .story-card:hover .story-img {
      transform: scale(1.1);
    }

    .story-overlay {
      position: absolute;
      bottom: 1.5rem;
      left: 1.5rem;
      right: 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 1.5rem;
      border-radius: var(--radius-xl);
      color: var(--white);
      transition: all 0.3s ease;
      z-index: 2;
    }

    .story-card:hover .story-overlay {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-5px);
    }

    .story-category {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      color: var(--primary-orange);
    }

    .story-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .story-desc {
      font-size: 0.9rem;
      opacity: 0.9;
      line-height: 1.4;
    }

    @media (max-width: 992px) {
      .story-grid {
        grid-template-columns: 1fr;
      }

      .story-card {
        height: 400px;
      }
    }

    /* Fast-Category Hub */
    .category-hub {
      padding: 1.5rem 0;
      background: var(--white);
      border-bottom: 1px solid var(--gray-200);
      position: sticky;
      top: 0;
      z-index: 100;
      margin-bottom: 2rem;
    }

    .category-wrapper {
      display: flex;
      gap: 2.5rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE 10+ */
    }

    .category-wrapper::-webkit-scrollbar {
      display: none;
      /* Safari and Chrome */
    }

    .category-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      min-width: fit-content;
      color: var(--gray-500);
      cursor: pointer;
      transition: all var(--transition-normal);
      opacity: 0.7;
      text-decoration: none !important;
    }

    .category-item i {
      font-size: 1.25rem;
    }

    .category-item span {
      font-size: 0.75rem;
      font-weight: 600;
      white-space: nowrap;
    }

    .category-item:hover {
      color: var(--gray-900);
      opacity: 1;
      transform: translateY(-2px);
    }

    .category-item.active {
      color: var(--primary-orange);
      opacity: 1;
      position: relative;
    }

    .category-item.active::after {
      content: '';
      position: absolute;
      bottom: -1rem;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--primary-orange);
    }

    /* Local Legends Section */
    .legends-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, #fff 0%, #fef1ed 100%);
    }

    .legend-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: var(--radius-2xl);
      padding: 2rem;
      text-align: center;
      transition: all var(--transition-normal);
      height: 100%;
      position: relative;
    }

    .legend-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
      background: var(--white);
    }

    .legend-avatar-wrapper {
      position: relative;
      width: 100px;
      height: 100px;
      margin: 0 auto 1.5rem;
    }

    .legend-avatar {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid var(--white);
      box-shadow: var(--shadow-md);
    }

    .legend-badge {
      position: absolute;
      bottom: 0;
      right: 0;
      background: linear-gradient(45deg, #ffd700, #ffa500);
      color: var(--white);
      width: 28px;
      height: 28px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      border: 2px solid var(--white);
      animation: shimmer 2s infinite;
    }

    .legend-name {
      font-size: 1.25rem;
      font-weight: 700;
      margin-bottom: 0.25rem;
      color: var(--gray-900);
    }

    .legend-title {
      font-size: 0.85rem;
      color: var(--primary-orange);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 1rem;
    }

    .legend-stats {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid var(--gray-100);
    }

    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .stat-value {
      font-weight: 700;
      color: var(--gray-900);
      font-size: 0.95rem;
    }

    .stat-label {
      font-size: 0.7rem;
      color: var(--gray-500);
      text-transform: uppercase;
    }

    @keyframes shimmer {
      0% {
        box-shadow: 0 0 0 0 rgba(255, 165, 0, 0.4);
      }

      70% {
        box-shadow: 0 0 0 10px rgba(255, 165, 0, 0);
      }

      100% {
        box-shadow: 0 0 0 0 rgba(255, 165, 0, 0);
      }
    }
  </style>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content" data-aos="fade-up">
      <h1 class="hero-title">
        Experience WanderLust
      </h1>
      <p class="hero-subtitle">Book unique stays, rent local vehicles, and explore authentic food.</p>

      <div class="search-tabs" data-aos="fade-up" data-aos-delay="200">
        <button class="search-tab active" data-type="global" onclick="switchSearchTab(this, 'global')">
          üåè <span>Global</span>
        </button>
        <button class="search-tab" data-type="listings" onclick="switchSearchTab(this, 'listings')">
          üèòÔ∏è <span>Stays</span>
        </button>
        <button class="search-tab" data-type="vehicles" onclick="switchSearchTab(this, 'vehicles')">
          üöó <span>Wheels</span>
        </button>
        <button class="search-tab" data-type="dhabas" onclick="switchSearchTab(this, 'dhabas')">
          üçõ <span>Food</span>
        </button>
      </div>

      <!-- Advanced Pro Search Bar -->
      <form action="/search" method="GET" class="search-container glass" id="hero-search-form" data-aos="zoom-in"
        data-aos-delay="300">

        <!-- Location Field -->
        <div class="search-input-group">
          <div class="search-field-wrapper">
            <label class="search-label">Location</label>
            <input type="text" name="q" class="search-input" id="hero-search-input" placeholder="Where are you going?"
              autocomplete="off" style="flex: 1;">
            <button type="button" id="homeVoiceBtn" class="hero-voice-btn" title="Search by Voice"
              style="background: none; border: none; padding: 5px; color: #ff385c; cursor: pointer; position: absolute; right: 40px; top: 50%; transform: translateY(-50%); font-size: 1.2rem;">
              <i class="fas fa-microphone"></i>
            </button>
            <button type="button" id="homeClearSearch" class="hero-clear-btn"
              style="display: none; background: none; border: none; padding: 5px; color: #666; cursor: pointer; position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">
              <i class="fas fa-times-circle"></i>
            </button>
          </div>
        </div>

        <!-- Date Field (Dynamic) -->
        <div class="search-input-group" id="date-group">
          <div class="search-field-wrapper">
            <label class="search-label">Check in - Check out</label>
            <input type="text" class="search-input flatpickr-input" id="date-range" placeholder="Add dates">
            <input type="hidden" name="startDate" id="startDate">
            <input type="hidden" name="endDate" id="endDate">
          </div>
        </div>

        <!-- Guests Field (Dynamic) -->
        <div class="search-input-group" id="guests-group">
          <div class="search-field-wrapper">
            <label class="search-label">Guests</label>
            <input type="number" name="guests" min="1" class="search-input" placeholder="Add guests">
          </div>
        </div>

        <button type="submit" class="btn-search">Search</button>
      </form>
    </div>
  </section>

  <!-- Fast-Category Hub -->
  <div class="category-hub">
    <div class="container">
      <div class="category-wrapper">
        <a href="/listings" class="category-item active">
          <i class="fas fa-city"></i>
          <span>Iconic Cities</span>
        </a>
        <a href="/listings" class="category-item">
          <i class="fas fa-swimming-pool"></i>
          <span>Amazing Pools</span>
        </a>
        <a href="/listings" class="category-item">
          <i class="fas fa-mountain"></i>
          <span>Mountains</span>
        </a>
        <a href="/listings" class="category-item">
          <i class="fas fa-umbrella-beach"></i>
          <span>Beachfront</span>
        </a>
        <a href="/vehicles" class="category-item">
          <i class="fas fa-mountain-sun"></i>
          <span>Adventure Wheels</span>
        </a>
        <a href="/vehicles" class="category-item">
          <i class="fas fa-car-side"></i>
          <span>Luxury Cars</span>
        </a>
        <a href="/vehicles" class="category-item">
          <i class="fas fa-bicycle"></i>
          <span>Bikes</span>
        </a>
        <a href="/dhabas" class="category-item">
          <i class="fas fa-pepper-hot"></i>
          <span>Spicy Food</span>
        </a>
        <a href="/dhabas" class="category-item">
          <i class="fas fa-utensils"></i>
          <span>Traditional</span>
        </a>
        <a href="/dhabas" class="category-item">
          <i class="fas fa-mug-hot"></i>
          <span>Tea Stops</span>
        </a>
        <a href="/listings" class="category-item">
          <i class="fas fa-campground"></i>
          <span>Camping</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Local Legends (Hall of Fame) Section -->
  <% if (typeof localLegends !=='undefined' && localLegends.length> 0) { %>
    <section class="legends-section">
      <div class="container">
        <div class="text-center mb-5">
          <h2 class="premium-section-title" data-aos="fade-up">Our Local Legends</h2>
          <p class="premium-section-subtitle" data-aos="fade-up" data-aos-delay="100">
            Meet the exceptional hosts and community leaders who make every journey unforgettable.
          </p>
        </div>

        <div class="row g-4 justify-content-center">
          <% localLegends.forEach((legend, i)=> { %>
            <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="<%= 200 + (i * 100) %>">
              <div class="legend-card">
                <div class="legend-avatar-wrapper">
                  <img
                    src="<%= legend.avatar?.url || 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?w=400&fit=crop' %>"
                    alt="<%= legend.username %>" class="legend-avatar">
                  <div class="legend-badge">
                    <i class="fas fa-crown"></i>
                  </div>
                </div>
                <h3 class="legend-name">
                  <%= legend.firstName || legend.username %>
                </h3>
                <p class="legend-title">
                  <%= legend.legendTitle %>
                </p>

                <div class="legend-stats">
                  <div class="stat-item">
                    <span class="stat-value"><i class="fas fa-star text-warning me-1"></i>
