          <script>
            function switchSearchTab(btn, type) {
              // Update active tab UI
              document.querySelectorAll('.search-tab').forEach(tab => tab.classList.remove('active'));
              btn.classList.add('active');

              // Update form context
              const form = document.getElementById('hero-search-form');
              const input = document.getElementById('hero-search-input');
              const icon = document.getElementById('search-icon');

              if (type === 'listings') {
                form.action = '/listings';
                input.placeholder = 'Search for amazing stays...';
                input.name = 'location';
                icon.className = 'fas fa-search';
              } else if (type === 'vehicles') {
                form.action = '/vehicles';
                input.placeholder = 'Search for rental cars, bikes...';
                input.name = 'location';
                icon.className = 'fas fa-car';
              } else if (type === 'dhabas') {
                form.action = '/dhabas';
                input.placeholder = 'Search for authentic dhabas...';
                input.name = 'location';
                icon.className = 'fas fa-utensils';
              }

              // Add a subtle animation to the input
              if (input && input.parentElement) {
                input.parentElement.style.animation = 'none';
                input.parentElement.offsetHeight; // trigger reflow
                input.parentElement.style.animation = 'pulse-bg 0.4s ease-out';
              }
            }
          </script>

          <style>
            @keyframes pulse-bg {
              0% {
                background: var(--white);
              }

              50% {
                background: var(--gray-50);
              }

              100% {
                background: var(--white);
              }
            }
          </style>