<% layout("/layouts/boilerplate") -%>

  <style>
    /* ===== PREMIUM HERO SECTION ===== */
    .hero-section {
      position: relative;
      height: 85vh;
      min-height: 600px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--white);
      text-align: center;
      background: url('/images/hero-bg.png') center/cover no-repeat;
      margin-top: -1.5rem;
      /* Offset boilerplate padding if any */
      overflow: hidden;
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.5) 100%);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      width: 100%;
      max-width: 900px;
      padding: 0 1.5rem;
    }

    .hero-title {
      font-size: 4rem;
      font-weight: 800;
      margin-bottom: 1rem;
      text-shadow: 0 4px 12px rgba(0, 0, 0, 0.3);
      letter-spacing: -1px;
    }

    .hero-subtitle {
      font-size: 1.5rem;
      font-weight: 500;
      margin-bottom: 3rem;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      opacity: 0.95;
    }

    /* Tabbed Search Bar */
    .search-tabs {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 1rem;
    }

    .search-tab {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--white);
      padding: 0.6rem 1.5rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all var(--transition-normal);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-tab:hover {
      background: rgba(255, 255, 255, 0.25);
    }

    .search-tab.active {
      background: var(--white);
      color: var(--gray-900);
      border-color: var(--white);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .search-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0.5rem;
      border-radius: var(--radius-full);
      display: flex;
      gap: 0.5rem;
    }

    .search-input-group {
      flex: 1;
      display: flex;
      align-items: center;
      background: var(--white);
      border-radius: var(--radius-full);
      padding: 0.5rem 1.5rem;
      box-shadow: var(--shadow-md);
    }

    .search-input-group i {
      color: var(--gray-400);
      margin-right: 0.75rem;
      font-size: 1.25rem;
    }

    .search-input {
      border: none;
      width: 100%;
      padding: 0.5rem 0;
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--gray-800);
      outline: none !important;
    }

    .btn-search {
      background: var(--primary-orange);
      color: var(--white);
      border: none;
      border-radius: var(--radius-full);
      padding: 0 2.5rem;
      font-weight: 700;
      font-size: 1.1rem;
      height: 60px;
      transition: all var(--transition-normal);
    }

    .btn-search:hover {
      background: var(--primary-orange-hover);
      transform: scale(1.02);
      box-shadow: 0 8px 20px rgba(253, 126, 20, 0.4);
    }

    /* Section Title Styling */
    .premium-section-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: var(--gray-900);
    }

    .premium-section-subtitle {
      font-size: 1.1rem;
      color: var(--gray-500);
      margin-bottom: 3rem;
    }

    /* Enhanced Card Styling */
    .premium-card {
      border: none;
      border-radius: var(--radius-2xl);
      overflow: hidden;
      background: var(--white);
      box-shadow: var(--shadow-md);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .premium-card:hover {
      transform: translateY(-12px);
      box-shadow: var(--shadow-2xl);
    }

    .card-img-wrapper {
      position: relative;
      overflow: hidden;
      padding-top: 66.67%;
      /* 3:2 Aspect Ratio */
    }

    .card-img-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .premium-card:hover .card-img-wrapper img {
      transform: scale(1.1);
    }

    .card-wishlist {
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 36px;
      height: 36px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(4px);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--gray-400);
      cursor: pointer;
      transition: all var(--transition-fast);
      z-index: 10;
    }

    .card-wishlist:hover {
      color: var(--secondary-red);
      transform: scale(1.1);
    }

    .card-wishlist.active {
      color: var(--secondary-red);
    }

    .card-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: var(--white);
      color: var(--gray-900);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      box-shadow: var(--shadow-sm);
      z-index: 10;
    }

    .premium-card-body {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-location {
      font-size: 0.9rem;
      color: var(--gray-500);
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .card-listing-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--gray-900);
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }

    .card-price-wrapper {
      margin-top: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .card-price {
      font-size: 1.1rem;
      font-weight: 800;
      color: var(--gray-900);
    }

    .card-price span {
      font-weight: 400;
      color: var(--gray-500);
      font-size: 0.9rem;
    }

    /* Trust Section */
    .trust-section {
      padding: 6rem 0;
      background-color: var(--white);
    }

    .trust-item {
      text-align: center;
      padding: 2rem;
    }

    .trust-icon {
      width: 64px;
      height: 64px;
      background: var(--primary-orange-light);
      color: var(--primary-orange);
      border-radius: var(--radius-xl);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
      margin: 0 auto 1.5rem;
      transition: all var(--transition-normal);
    }

    .trust-item:hover .trust-icon {
      background: var(--primary-orange);
      color: var(--white);
      transform: rotateY(180deg);
    }

    @media (max-width: 991px) {
      .hero-title {
        font-size: 3rem;
      }

      .hero-subtitle {
        font-size: 1.25rem;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        height: 75vh;
      }

      .hero-title {
        font-size: 2.25rem;
      }

      .search-container {
        flex-direction: column;
        border-radius: var(--radius-2xl);
      }

      .btn-search {
        width: 100%;
        height: 50px;
      }
    }

    /* Storytelling Section */
    .story-section {
      padding: 6rem 0;
      background: var(--gray-50);
    }

    .story-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-top: 3rem;
    }

    .story-card {
      position: relative;
      height: 500px;
      border-radius: var(--radius-2xl);
      overflow: hidden;
      cursor: pointer;
      box-shadow: var(--shadow-lg);
      transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .story-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
    }

    .story-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.7s ease;
    }

    .story-card:hover .story-img {
      transform: scale(1.1);
    }

    .story-overlay {
      position: absolute;
      bottom: 1.5rem;
      left: 1.5rem;
      right: 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 1.5rem;
      border-radius: var(--radius-xl);
      color: var(--white);
      transition: all 0.3s ease;
      z-index: 2;
    }

    .story-card:hover .story-overlay {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-5px);
    }

    .story-category {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      color: var(--primary-orange);
    }

    .story-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .story-desc {
      font-size: 0.9rem;
      opacity: 0.9;
      line-height: 1.4;
    }

    @media (max-width: 992px) {
      .story-grid {
        grid-template-columns: 1fr;
      }

      .story-card {
        height: 400px;
      }
    }

    /* Fast-Category Hub */
    .category-hub {
      padding: 1.5rem 0;
      background: var(--white);
      border-bottom: 1px solid var(--gray-200);
      position: sticky;
      top: 0;
      z-index: 100;
      margin-bottom: 2rem;
    }

    .category-wrapper {
      display: flex;
      gap: 2.5rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE 10+ */
    }

    .category-wrapper::-webkit-scrollbar {
      display: none;
      /* Safari and Chrome */
    }

    .category-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      min-width: fit-content;
      color: var(--gray-500);
      cursor: pointer;
      transition: all var(--transition-normal);
      opacity: 0.7;
      text-decoration: none !important;
    }

    .category-item i {
      font-size: 1.25rem;
    }

    .category-item span {
      font-size: 0.75rem;
      font-weight: 600;
      white-space: nowrap;
    }

    .category-item:hover {
      color: var(--gray-900);
      opacity: 1;
      transform: translateY(-2px);
    }

    .category-item.active {
      color: var(--primary-orange);
      opacity: 1;
      position: relative;
    }

    .category-item.active::after {
      content: '';
      position: absolute;
      bottom: -1rem;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--primary-orange);
    }

    /* Local Legends Section */
    .legends-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, #fff 0%, #fef1ed 100%);
    }

    .legend-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: var(--radius-2xl);
      padding: 2rem;
      text-align: center;
      transition: all var(--transition-normal);
      height: 100%;
      position: relative;
    }

    .legend-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-2xl);
      background: var(--white);
    }

    .legend-avatar-wrapper {
      position: relative;
      width: 100px;
      height: 100px;
      margin: 0 auto 1.5rem;
    }

    .legend-avatar {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid var(--white);
      box-shadow: var(--shadow-md);
    }

    .legend-badge {
      position: absolute;
      bottom: 0;
      right: 0;
      background: linear-gradient(45deg, #ffd700, #ffa500);
      color: var(--white);
      width: 28px;
      height: 28px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      border: 2px solid var(--white);
      animation: shimmer 2s infinite;
    }

    .legend-name {
      font-size: 1.25rem;
      font-weight: 700;
      margin-bottom: 0.25rem;
      color: var(--gray-900);
    }

    .legend-title {
      font-size: 0.85rem;
      color: var(--primary-orange);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 1rem;
    }

    .legend-stats {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid var(--gray-100);
    }

    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .stat-value {
      font-weight: 700;
      color: var(--gray-900);
      font-size: 0.95rem;
    }

    .stat-label {
      font-size: 0.7rem;
      color: var(--gray-500);
      text-transform: uppercase;
    }

    @keyframes shimmer {
      0% {
        box-shadow: 0 0 0 0 rgba(255, 165, 0, 0.4);
      }

      70% {
        box-shadow: 0 0 0 10px rgba(255, 165, 0, 0);
      }

      100% {
        box-shadow: 0 0 0 0 rgba(255, 165, 0, 0);
      }
    }
  </style>

