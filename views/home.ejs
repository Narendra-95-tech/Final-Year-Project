          <p class="service-description">Find perfect homes, apartments, and unique stays for your dream vacation</p>
          <a href="/listings" class="service-btn">
            <i class="fas fa-arrow-right"></i>
            Explore Stays
          </a>
        </div>
      </div>

      <div class="col-lg-4 col-md-4">
        <div class="service-card animate-fade-in" style="animation-delay: 0.2s;">
          <div class="service-icon vehicles">
            <i class="fas fa-car"></i>
          </div>
          <h3 class="service-title">Vehicle Rentals</h3>
          <p class="service-description">Rent cars, bikes, and vans for your journey with flexible options</p>
          <a href="/vehicles" class="service-btn">
            <i class="fas fa-arrow-right"></i>
            Rent Vehicles
          </a>
        </div>
      </div>

      <div class="col-lg-4 col-md-4">
        <div class="service-card animate-fade-in" style="animation-delay: 0.3s;">
          <div class="service-icon dhabas">
            <i class="fas fa-utensils"></i>
          </div>
          <h3 class="service-title">Local Dhabas</h3>
          <p class="service-description">Discover authentic local restaurants and eateries for amazing food experiences</p>
          <a href="/dhabas" class="service-btn">
            <i class="fas fa-arrow-right"></i>
            Find Food
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section class="py-5">
  <div class="container">

    <!-- Vacation Rentals Section -->
    <div class="section-card animate-fade-in">
      <div class="section-header">
        <i class="fas fa-home section-icon"></i>
        <h3 class="section-title">Vacation Rentals</h3>
        <p class="section-subtitle">Find perfect homes, apartments, and unique stays</p>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <% if (featuredListings && featuredListings.length > 0) { %>
            <% for (let listing of featuredListings) { %>
              <div class="col-lg-4 col-md-6">
                <div class="card item-card position-relative">
                  <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=400&h=250&fit=crop&crop=center' %>"
                       class="card-img-top item-image" alt="<%= listing.title %>">
                  <span class="price-badge">₹<%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %> / night</span>
                  <div class="card-body p-3">
                    <h6 class="card-title mb-2"><%= listing.title %></h6>
                    <p class="card-text small text-muted mb-1">
                      <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>
                    </p>
                    <p class="card-text small text-muted">
                      <i class="fas fa-user me-1"></i><%= listing.owner?.username || 'Host' %>
                    </p>
                    <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary w-100">
                      <i class="fas fa-eye me-1"></i>View Details
                    </a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <div class="col-12">
              <div class="text-center py-5">
                <i class="fas fa-home fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No listings available yet</h5>
                <p class="text-muted mb-4">Be the first to list your property!</p>
                <% if (currUser) { %>
                  <a href="/listings/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add First Listing
                  </a>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <div class="text-center mt-4">
          <a href="/listings" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-arrow-right me-2"></i>View All Listings
          </a>
        </div>
      </div>
    </div>

    <!-- Vehicle Rentals Section -->
    <div class="section-card animate-fade-in">
      <div class="section-header" style="background: linear-gradient(135deg, var(--secondary-green), #28a745);">
        <i class="fas fa-car section-icon"></i>
        <h3 class="section-title">Vehicle Rentals</h3>
        <p class="section-subtitle">Rent cars, bikes, and vans for your journey</p>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <% if (featuredVehicles && featuredVehicles.length > 0) { %>
            <% for (let vehicle of featuredVehicles) { %>
              <div class="col-lg-4 col-md-6">
                <div class="card item-card position-relative">
                  <img src="<%= vehicle.image?.url || 'https://images.unsplash.com/photo-1549317336-206569e8475c?w=400&h=250&fit=crop&crop=center' %>"
                       class="card-img-top item-image" alt="<%= vehicle.title %>">
                  <span class="price-badge">₹<%= vehicle.price ? Number(vehicle.price).toLocaleString("en-IN") : "N/A" %> / day</span>
                  <div class="card-body p-3">
                    <h6 class="card-title mb-2"><%= vehicle.title %></h6>
                    <div class="mb-2">
                      <span class="badge bg-success me-1"><%= vehicle.vehicleType %></span>
                    </div>
                    <p class="card-text small text-muted mb-1">
                      <i class="fas fa-map-marker-alt me-1"></i><%= vehicle.location %>
                    </p>
                    <p class="card-text small text-muted">
                      <i class="fas fa-user me-1"></i><%= vehicle.owner?.username || 'Owner' %>
                    </p>
                    <a href="/vehicles/<%= vehicle._id %>" class="btn btn-sm btn-outline-success w-100">
                      <i class="fas fa-eye me-1"></i>View Details
                    </a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <div class="col-12">
              <div class="text-center py-5">
                <i class="fas fa-car fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No vehicles available yet</h5>
                <p class="text-muted mb-4">Be the first to list your vehicle!</p>
                <% if (currUser) { %>
                  <a href="/vehicles/new" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add First Vehicle
                  </a>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <div class="text-center mt-4">
          <a href="/vehicles" class="btn btn-outline-success btn-lg">
            <i class="fas fa-arrow-right me-2"></i>View All Vehicles
          </a>
        </div>
      </div>
    </div>

    <!-- Dhabas Section -->
    <div class="section-card animate-fade-in">
      <div class="section-header" style="background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-hover));">
        <i class="fas fa-utensils section-icon"></i>
        <h3 class="section-title">Local Dhabas</h3>
        <p class="section-subtitle">Discover authentic local restaurants and eateries</p>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <% if (featuredDhabas && featuredDhabas.length > 0) { %>
            <% for (let dhaba of featuredDhabas) { %>
              <div class="col-lg-4 col-md-6">
                <div class="card item-card position-relative">
                  <img src="<%= dhaba.image?.url || 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=400&h=250&fit=crop&crop=center' %>"
                       class="card-img-top item-image" alt="<%= dhaba.title %>">
                  <div class="price-badge">
                    <span class="badge bg-light text-dark me-1"><%= dhaba.category %></span>
                    <%= dhaba.cuisine %>
                  </div>
                  <div class="card-body p-3">
                    <h6 class="card-title mb-2"><%= dhaba.title %></h6>
                    <div class="mb-2">
                      <% for (let i = 1; i <= 5; i++) { %>
                        <i class="fas fa-star <%= i <= (dhaba.rating || 0) ? 'text-warning' : 'text-muted' %>"></i>
                      <% } %>
                      <span class="ms-2 text-muted small">(<%= dhaba.rating || 0 %>)</span>
                    </div>
                    <p class="card-text small text-muted mb-1">
                      <i class="fas fa-map-marker-alt me-1"></i><%= dhaba.location %>
                    </p>
                    <p class="card-text small text-muted">
                      <i class="fas fa-user me-1"></i><%= dhaba.owner?.username || 'Owner' %>
                    </p>
                    <a href="/dhabas/<%= dhaba._id %>" class="btn btn-sm btn-outline-warning w-100">
                      <i class="fas fa-eye me-1"></i>View Details
                    </a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <div class="col-12">
              <div class="text-center py-5">
                <i class="fas fa-utensils fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No dhabas available yet</h5>
                <p class="text-muted mb-4">Be the first to list your dhaba!</p>
                <% if (currUser) { %>
                  <a href="/dhabas/new" class="btn btn-warning">
                    <i class="fas fa-plus me-2"></i>Add First Dhaba
                  </a>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <div class="text-center mt-4">
          <a href="/dhabas" class="btn btn-outline-warning btn-lg">
            <i class="fas fa-arrow-right me-2"></i>View All Dhabas
          </a>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
  <div class="container">
    <div class="row text-center g-4">
      <div class="col-lg-4 col-md-4">
        <div class="stat-item">
          <div class="stat-number">
            <%= (featuredListings ? featuredListings.length : 0) + (featuredVehicles ? featuredVehicles.length : 0) + (featuredDhabas ? featuredDhabas.length : 0) %>
          </div>
          <div class="stat-label">Total Listings</div>
        </div>
      </div>
      <div class="col-lg-4 col-md-4">
        <div class="stat-item">
          <div class="stat-number">3</div>
          <div class="stat-label">Services Available</div>
        </div>
      </div>
      <div class="col-lg-4 col-md-4">
        <div class="stat-item">
          <div class="stat-number">24/7</div>
          <div class="stat-label">Customer Support</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<% if (!currUser) { %>
<section class="cta-section">
  <div class="container">
    <h3 class="cta-title">Ready to Start Your Journey?</h3>
    <p class="cta-description">Join thousands of travelers who trust WanderLust for their travel needs</p>
    <div class="d-flex justify-content-center gap-3 flex-wrap">
      <a href="/signup" class="btn btn-primary btn-lg">
        <i class="fas fa-user-plus me-2"></i>Sign Up Free
      </a>
      <a href="/login" class="btn btn-outline-primary btn-lg">
        <i class="fas fa-sign-in-alt me-2"></i>Log In
      </a>
    </div>
  </div>
</section>
<% } %>

<script>
// Enhanced animations and interactions
document.addEventListener('DOMContentLoaded', function() {
  // Animate counters
  const counters = document.querySelectorAll('.stat-number');
  counters.forEach(counter => {
    const target = parseInt(counter.textContent);
    let current = 0;
    const increment = target / 50;
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        counter.textContent = target;
        clearInterval(timer);
      } else {
        counter.textContent = Math.floor(current);
      }
    }, 50);
  });

  // Add staggered animation to cards
  const cards = document.querySelectorAll('.service-card, .section-card, .item-card');
  cards.forEach((card, index) => {
    card.style.animationDelay = `${index * 0.1}s`;
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
});
</script>
