<% layout("/layouts/boilerplate") %>

    <style>
        .verify-container {
            max-width: 600px;
            margin: 50px auto;
        }

        .verify-card {
            background: white;
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.05);
            border: 1px solid #eee;
        }

        .upload-zone {
            border: 2px dashed #ddd;
            border-radius: 16px;
            padding: 40px;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
            background: #fafafa;
        }

        .upload-zone:hover {
            border-color: var(--primary-orange);
            background: rgba(254, 107, 0, 0.02);
        }

        .doc-type-icon {
            font-size: 2.5rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        .step {
            width: 40px;
            height: 6px;
            background: #eee;
            border-radius: 10px;
        }

        .step.active {
            background: var(--primary-orange);
        }
    </style>

    <div class="container verify-container">
        <div class="verify-card">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Identity Verification</h2>
                <p class="text-muted">Secure your account and gain community trust.</p>
            </div>

            <div class="step-indicator">
                <div class="step active"></div>
                <div class="step"></div>
                <div class="step"></div>
            </div>

            <form action="/trust/verify" method="POST" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="form-label fw-bold">Select Document Type</label>
                    <select name="docType" class="form-select py-3 rounded-4 shadow-sm border-0 bg-light">
                        <option value="ID">Government Issued ID</option>
                        <option value="Passport">Passport</option>
                        <option value="License">Driving License</option>
                    </select>
                </div>

                <div class="mb-5">
                    <label class="form-label fw-bold">Upload Documents</label>
                    <div class="upload-zone" onclick="document.getElementById('docInput').click()">
                        <i class="fas fa-cloud-upload-alt doc-type-icon"></i>
                        <h5 class="fw-bold">Drag & Drop or Click</h5>
                        <p class="small text-muted mb-0">PDF, JPG, or PNG (Max 5MB)</p>
                        <input type="file" name="documents" id="docInput" class="d-none" multiple required
                            onchange="updateFileName(this)">
                    </div>
                    <div id="fileList" class="mt-3 small text-primary fw-bold"></div>
                </div>

                <div class="alert alert-info py-3 rounded-4 border-0 small">
                    <i class="fas fa-lock me-2"></i> Your documents are encrypted and stored securely. They will only be
                    used for verification purposes.
                </div>

                <button type="submit" class="btn btn-auth-login w-100 py-3 mt-4">
                    Submit for Verification
                </button>
            </form>
        </div>
    </div>

    <script>
        function updateFileName(input) {
            const fileList = document.getElementById('fileList');
            if (input.files.length > 0) {
                fileList.innerHTML = `<i class="fas fa-file-alt me-1"></i> ${input.files.length} file(s) selected`;
            } else {
                fileList.innerHTML = '';
            }
        }
    </script>