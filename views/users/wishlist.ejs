<% layout("layouts/boilerplate") %>

    <style>
        .wishlist-header {
            background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
            padding: 60px 0 80px;
            color: white;
            margin-bottom: -40px;
            border-radius: 0 0 30px 30px;
            text-align: center;
            position: relative;
        }

        .wishlist-title {
            font-weight: 800;
            font-size: 36px;
            letter-spacing: -1px;
            margin-bottom: 10px;
        }

        .wishlist-subtitle {
            font-size: 18px;
            opacity: 0.95;
        }

        .wishlist-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px 60px;
        }

        .wishlist-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }

        /* Reuse/Refine Card Styles */
        .listing-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .listing-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
        }

        .card-img-container {
            height: 220px;
            overflow: hidden;
            position: relative;
        }

        .card-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .listing-card:hover .card-img {
            transform: scale(1.05);
        }

        .card-body-custom {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .listing-title {
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 8px;
            color: #222;
            text-decoration: none;
        }

        .listing-location {
            color: #666;
            font-size: 14px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .listing-price {
            font-weight: 800;
            font-size: 20px;
            color: #222;
            margin-top: auto;
        }

        /* Category Badge */
        .category-badge {
            position: absolute;
            bottom: 15px;
            left: 15px;
            background: rgba(0, 0, 0, 0.6);
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            backdrop-filter: blur(4px);
        }

        .remove-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background: white;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ccc;
            /* Default to grey (outline/inactive) */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            border: none;
            transition: all 0.2s;
            z-index: 10;
            cursor: pointer;
        }

        .remove-btn.active {
            color: #FF4D4D;
            /* Active red */
        }

        .remove-btn:hover {
            transform: scale(1.1);
            background: #FF4D4D;
            color: white;
        }

        .empty-wishlist {
            text-align: center;
            background: white;
            padding: 60px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        }

        /* Bulk Actions Bar Styles */
        .bulk-actions-bar {
            position: sticky;
            top: 80px;
            z-index: 100;
            background: white;
            padding: 15px 30px;
            margin: -20px auto 30px;
            max-width: 1200px;
            width: calc(100% - 40px);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            display: none;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

        .bulk-actions-bar.active {
            display: flex;
            animation: slideDown 0.3s ease-out;
        }

        @keyframes slideDown {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .selection-info {
            font-weight: 700;
            color: #222;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .btn-bulk-delete {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fee2e2;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-bulk-delete:hover {
            background: #fee2e2;
            transform: translateY(-2px);
        }

        /* Checkbox Styles */
        .wishlist-checkbox-wrapper {
            position: absolute;
            top: 15px;
            left: 15px;
            z-index: 20;
        }

        .custom-checkbox {
            width: 24px;
            height: 24px;
            border: 2px solid rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(4px);
        }

        .custom-checkbox i {
            color: white;
            font-size: 12px;
            display: none;
        }

        .wishlist-checkbox input:checked+.custom-checkbox {
            background: #FF6B6B;
            border-color: #FF6B6B;
        }

        .wishlist-checkbox input:checked+.custom-checkbox i {
            display: block;
        }

        .wishlist-checkbox input {
            display: none;
        }

        .listing-card.selected {
            border: 2px solid #FF6B6B;
            background: #fffafa;
        }
    </style>

    <div class="wishlist-header">
        <h1 class="wishlist-title">My Wishlist</h1>
        <p class="wishlist-subtitle">Your collection of favorite places and rides.</p>
    </div>

    <div class="wishlist-container">
        <% const allItems=[ ...(wishlist || []).filter(i=> i).map(i => ({...i.toObject(), type: 'listing', apiType:
            'listing'})),
            ...(wishlistVehicles || []).filter(i => i).map(i => ({...i.toObject(), type: 'vehicle', apiType:
            'vehicle'})),
            ...(wishlistDhabas || []).filter(i => i).map(i => ({...i.toObject(), type: 'dhaba', apiType: 'dhaba'}))
            ];
            %>

            <% if(allItems.length===0) { %>
                <div class="empty-state-wrapper" style="max-width: 800px; margin: 60px auto 0; perspective: 1000px;">
                    <div class="empty-wishlist-card"
                        style="position: relative; padding: 100px 40px 80px; border-radius: 40px; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.5); box-shadow: 0 40px 100px rgba(0,0,0,0.08); text-align: center; overflow: hidden;">

                        <!-- Floating Decorative Elements -->
                        <div class="decorative-blob"
                            style="position: absolute; top: -100px; right: -100px; width: 300px; height: 300px; background: rgba(255, 107, 107, 0.05); border-radius: 50%; filter: blur(60px); z-index: -1;">
                        </div>
                        <div class="decorative-blob"
                            style="position: absolute; bottom: -100px; left: -100px; width: 300px; height: 300px; background: rgba(255, 142, 83, 0.05); border-radius: 50%; filter: blur(60px); z-index: -1;">
                        </div>

                        <div class="illustration-container"
                            style="position: relative; display: inline-block; margin-bottom: 40px;">
                            <img src="/images/empty-wishlist.png" alt="Empty Wishlist"
                                style="width: 320px; height: auto; animation: float 6s ease-in-out infinite; filter: drop-shadow(0 30px 60px rgba(255, 107, 107, 0.2));">
                        </div>

                        <h3
                            style="font-weight: 800; font-size: 34px; color: #1a1a1a; margin-bottom: 15px; letter-spacing: -0.5px;">
                            Your heart is empty!</h3>
                        <p class="text-muted mb-5"
                            style="font-size: 19px; max-width: 480px; margin: 0 auto 40px; line-height: 1.6;">Don't let
                            these amazing places slip away. Explore our collections and start saving your favorites.</p>

                        <div class="cta-wrapper"
                            style="display: flex; gap: 15px; justify-content: center; align-items: center;">
                            <a href="/listings" class="btn btn-primary rounded-pill px-5 py-3 fw-bold"
                                style="background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%); border: none; box-shadow: 0 20px 40px rgba(255, 107, 107, 0.3); transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); font-size: 18px; display: inline-flex; align-items: center; gap: 10px;">
                                <i class="fas fa-search"></i> Start Exploring
                            </a>
                        </div>
                    </div>

                    <!-- Subtle Suggestions Section -->
                    <div class="trending-mini-section text-center mt-5 pt-4"
                        style="opacity: 0.8; animation: fadeInUp 1s ease-out forwards; animation-delay: 0.5s;">
                        <h6 class="text-uppercase fw-bold text-muted mb-4"
                            style="letter-spacing: 2px; font-size: 13px;">Trending Right Now</h6>
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <span class="badge rounded-pill bg-light text-dark px-3 py-2 border"
                                style="cursor: pointer; transition: 0.3s;"
                                onclick="window.location.href='/listings?category=Beach'">üèùÔ∏è Beach Houses</span>
                            <span class="badge rounded-pill bg-light text-dark px-3 py-2 border"
                                style="cursor: pointer; transition: 0.3s;"
                                onclick="window.location.href='/listings?category=Mountains'">üèîÔ∏è Mountain
                                Escapes</span>
                            <span class="badge rounded-pill bg-light text-dark px-3 py-2 border"
                                style="cursor: pointer; transition: 0.3s;"
                                onclick="window.location.href='/listings?category=City'">üèôÔ∏è City Lofts</span>
                        </div>
                    </div>
                </div>

                <style>
                    @keyframes float {

                        0%,
                        100% {
                            transform: translateY(0) rotate(0);
                        }

                        50% {
                            transform: translateY(-20px) rotate(2deg);
                        }
                    }

                    @keyframes fadeInUp {
                        from {
                            opacity: 0;
                            transform: translateY(30px);
                        }

                        to {
                            opacity: 0.8;
                            transform: translateY(0);
                        }
                    }

                    .badge:hover {
                        background: #eee !important;
                        transform: translateY(-2px);
                    }

                    .btn-primary:hover {
                        transform: translateY(-5px) scale(1.02);
                        box-shadow: 0 25px 50px rgba(255, 107, 107, 0.4);
                    }
                </style>
                <% } else { %>
                    <!-- Bulk Actions Bar -->
                    <div id="bulkActionsBar" class="bulk-actions-bar">
                        <div class="selection-info">
                            <label class="wishlist-checkbox"
                                style="display: flex; align-items: center; cursor: pointer;">
                                <input type="checkbox" id="selectAllWishlist">
                                <div class="custom-checkbox me-3">
                                    <i class="fas fa-check"></i>
                                </div>
                                Select All
                            </label>
                            <span id="selectedCount" class="badge rounded-pill bg-light text-dark border ms-3"
                                style="font-size: 14px; padding: 8px 15px;">0 Selected</span>
                        </div>
                        <button id="deleteSelectedBtn" class="btn-bulk-delete">
                            <i class="fas fa-trash-alt"></i> Remove Selected
                        </button>
                    </div>

                    <div class="wishlist-grid">
                        <% for(let item of allItems) { /* Normalize Item Data */ let title="Unknown" ; let price=0; let
                            image="" ; let location="" ; let linkUrl="#" ; let badgeText="" ; if(item.type==='listing' )
                            { title=item.title; price=item.price; image=item.image ? item.image.url : '' ;
                            location=`${item.location}, ${item.country}`; linkUrl=`/listings/${item._id}`;
                            badgeText="Stays" ; } else if(item.type==='vehicle' ) { title=`${item.brand} ${item.model}`;
                            price=item.price; image=item.image ? item.image.url : '' ; location=`${item.location},
                            ${item.country}`; linkUrl=`/vehicles/${item._id}`; badgeText="Vehicle" ; } else
                            if(item.type==='dhaba' ) { title=item.title; price=null; image=(item.image &&
                            item.image.length> 0) ? item.image[0].url : (item.images && item.images.length > 0 ?
                            item.images[0].url : '');
                            location = `${item.address || item.location}, ${item.city || item.country}`;
                            linkUrl = `/dhabas/${item._id}`;
                            badgeText = "Eats";
                            }
                            %>
                            <div class="listing-card" id="card-<%= item._id %>" data-id="<%= item._id %>"
                                data-type="<%= item.type %>">
                                <div class="wishlist-checkbox-wrapper">
                                    <label class="wishlist-checkbox">
                                        <input type="checkbox" class="wishlist-select" data-id="<%= item._id %>"
                                            data-type="<%= item.type %>">
                                        <div class="custom-checkbox">
                                            <i class="fas fa-check"></i>
                                        </div>
                                    </label>
                                </div>
                                <button class="remove-btn active" data-id="<%= item._id %>"
                                    onclick="removeFromWishlistPage('<%= item._id %>', '<%= item.type %>')"
                                    title="Remove from Wishlist">
                                    <i class="fas fa-heart" style="color: #FF4D4D;"></i>
                                </button>

                                <a href="<%= linkUrl %>" class="card-img-container">
                                    <img src="<%= image %>" alt="<%= title %>" class="card-img">
                                    <span class="category-badge">
                                        <%= badgeText %>
                                    </span>
                                </a>

                                <div class="card-body-custom">
                                    <a href="<%= linkUrl %>" class="listing-title">
                                        <%= title %>
                                    </a>
                                    <div class="listing-location">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <%= location %>
                                    </div>
                                    <% if(price) { %>
                                        <div class="listing-price">
                                            &#8377; <%= price.toLocaleString("en-IN") %>
                                                <span style="font-size: 14px; font-weight: 500; color: #888;">
                                                    <%= item.type==='vehicle' ? '/ day' : '/ night' %>
                                                </span>
                                        </div>
                                        <% } else { %>
                                            <div class="listing-price" style="font-size: 16px; color: #555;">
                                                View Menu
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% } %>
    </div>
    <script src="/js/wishlist-handler.js"></script>
    <script>
        async function removeFromWishlistPage(id, type) {
            const confirmed = await window.wanderConfirm(
                "Remove from Wishlist",
                "Are you sure you want to remove this from your wishlist?",
                "Yes, Remove"
            );

            if (confirmed) {
                if (window.wishlistHandler) {
                    try {
                        await window.wishlistHandler.removeFromWishlist(id, type);
                        window.location.reload();
                    } catch (err) {
                        console.error('Error removing item:', err);
                    }
                }
            }
        }

        // Bulk Actions Logic
        document.addEventListener('DOMContentLoaded', () => {
            const bulkBar = document.getElementById('bulkActionsBar');
            if (!bulkBar) return;

            const selectAll = document.getElementById('selectAllWishlist');
            const deleteBtn = document.getElementById('deleteSelectedBtn');
            const countDisplay = document.getElementById('selectedCount');
            const checkboxes = document.querySelectorAll('.wishlist-select');

            function updateBulkBar() {
                const selected = document.querySelectorAll('.wishlist-select:checked');
                const count = selected.length;

                if (count > 0) {
                    bulkBar.classList.add('active');
                    countDisplay.textContent = `${count} Selected`;
                } else {
                    bulkBar.classList.remove('active');
                    if (selectAll) selectAll.checked = false;
                }

                checkboxes.forEach(cb => {
                    const card = cb.closest('.listing-card');
                    if (cb.checked) {
                        card.classList.add('selected');
                    } else {
                        card.classList.remove('selected');
                    }
                });
            }

            checkboxes.forEach(cb => {
                cb.addEventListener('change', updateBulkBar);
                const wrapper = cb.closest('.wishlist-checkbox');
                if (wrapper) {
                    wrapper.addEventListener('click', (e) => e.stopPropagation());
                }
            });

            if (selectAll) {
                selectAll.addEventListener('change', (e) => {
                    checkboxes.forEach(cb => cb.checked = e.target.checked);
                    updateBulkBar();
                });
            }

            if (deleteBtn) {
                deleteBtn.addEventListener('click', async () => {
                    const selected = Array.from(document.querySelectorAll('.wishlist-select:checked'))
                        .map(cb => ({
                            id: cb.getAttribute('data-id'),
                            type: cb.getAttribute('data-type')
                        }));

                    if (selected.length === 0) return;

                    const confirmed = await window.wanderConfirm(
                        'Confirm Removal',
                        `Are you sure you want to remove ${selected.length} items from your wishlist?`,
                        'Remove All'
                    );

                    if (confirmed) {
                        try {
                            if (window.wishlistHandler) {
                                const result = await window.wishlistHandler.bulkRemoveFromWishlist(selected);
                                if (result.success) {
                                    window.location.reload();
                                } else {
                                    alert(result.error || 'Failed to update wishlist');
                                }
                            } else {
                                const response = await fetch('/api/wishlist/bulk', {
                                    method: 'DELETE',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ items: selected })
                                });

                                const result = await response.json();
                                if (result.success) {
                                    window.location.reload();
                                } else {
                                    alert(result.error || 'Failed to update wishlist');
                                }
                            }
                        } catch (error) {
                            console.error('Bulk delete error:', error);
                            alert('Something went wrong. Please try again.');
                        }
                    }
                });
            }
        });
    </script>