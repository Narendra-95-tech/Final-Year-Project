<% layout("layouts/boilerplate") %>

    <style>
        /* Profile Page Styling */
        .profile-header {
            background: linear-gradient(135deg, #FF9500 0%, #fe6b00 100%);
            /* Orange gradient for WanderLust */
            padding: 80px 0 120px;
            color: white;
            margin-bottom: -50px;
            border-radius: 0 0 30px 30px;
            position: relative;
        }

        .profile-avatar-container {
            width: 120px;
            height: 120px;
            margin: 0 auto 15px;
            position: relative;
        }

        .profile-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 4px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
            object-fit: cover;
            background: white;
        }

        .profile-name {
            font-weight: 800;
            font-size: 28px;
            margin-bottom: 5px;
            letter-spacing: -0.5px;
        }

        .profile-username {
            opacity: 0.9;
            font-weight: 500;
            font-size: 16px;
        }

        .profile-stats-container {
            background: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            max-width: 900px;
            margin: 0 auto 40px;
            position: relative;
            z-index: 10;
            display: flex;
            justify-content: space-around;
            align-items: center;
            text-align: center;
        }

        .stat-item {
            flex: 1;
            padding: 10px;
        }

        .stat-number {
            display: block;
            font-size: 24px;
            font-weight: 800;
            color: #222;
        }

        .stat-label {
            color: #888;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

        .profile-content {
            max-width: 900px;
            margin: 0 auto 50px;
            padding: 0 20px;
        }

        .info-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
            margin-bottom: 30px;
            border: 1px solid #f0f0f0;
            transition: transform 0.3s;
        }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .card-title-custom {
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 20px;
            color: #1a1a1a;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: #fff7ed;
            color: #fe6b00;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        .dashboard-link {
            display: flex;
            align-items: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 15px;
            text-decoration: none;
            color: #333;
            margin-bottom: 10px;
            transition: all 0.2s;
            border: 1px solid transparent;
            font-weight: 600;
        }

        .dashboard-link:hover {
            background: white;
            border-color: #fe6b00;
            color: #fe6b00;
            box-shadow: 0 4px 12px rgba(254, 107, 0, 0.1);
            transform: translateX(5px);
        }

        .dashboard-link i {
            margin-right: 15px;
            font-size: 18px;
            width: 25px;
            text-align: center;
        }

        .dashboard-link .arrow {
            margin-left: auto;
            color: #ccc;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f5f5f5;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            color: #888;
            font-weight: 500;
        }

        .info-value {
            font-weight: 600;
            color: #333;
        }
    </style>

    <!-- Header -->
    <div class="profile-header text-center">
        <div class="profile-avatar-container">
            <% if (currUser.avatar && (typeof currUser.avatar==='string' && currUser.avatar.length> 0) ||
                (currUser.avatar && currUser.avatar.url)) { %>
                <img src="<%= currUser.avatar.url || currUser.avatar %>" alt="User Avatar" class="profile-avatar">
                <% } else { %>
                    <div class="profile-avatar"
                        style="background: white; color: #fe6b00; display: flex; align-items: center; justify-content: center; font-size: 48px; font-weight: 800; text-transform: uppercase;">
                        <%= currUser.username.charAt(0) %>
                    </div>
                    <% } %>
        </div>
        <h1 class="profile-name">
            <%= currUser.username %>
        </h1>
        <div class="profile-username">@<%= currUser.username.toLowerCase().replace(/\s/g, '' ) %>
        </div>
        <div class="mt-3">
            <span class="badge rounded-pill bg-light text-dark shadow-sm px-3 py-2">
                <i class="fas fa-compass text-warning me-1"></i> Wanderer
            </span>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="profile-stats-container">
        <div class="stat-item">
            <span class="stat-number">-</span>
            <span class="stat-label">Bookings</span>
        </div>
        <div class="stat-item" style="border-left: 1px solid #eee; border-right: 1px solid #eee;">
            <span class="stat-number">-</span>
            <span class="stat-label">Reviews</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">-</span>
            <span class="stat-label">Favorites</span>
        </div>
    </div>

    <!-- Main Content -->
    <div class="profile-content">
        <div class="row">
            <!-- Personal Info -->
            <div class="col-md-6">
                <div class="info-card">
                    <div class="card-title-custom">
                        <div class="card-icon"><i class="fas fa-user"></i></div>
                        Personal Details
                    </div>

                    <div class="info-row">
                        <span class="info-label">Email</span>
                        <span class="info-value">
                            <%= currUser.email %>
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Member Since</span>
                        <span class="info-value">
                            <%= new Date().getFullYear() %>
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Account Type</span>
                        <span class="info-value"><span class="badge bg-success rounded-pill">Verified</span></span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-md-6">
                <div class="info-card">
                    <div class="card-title-custom">
                        <div class="card-icon"><i class="fas fa-bolt"></i></div>
                        Quick Actions
                    </div>

                    <a href="/bookings" class="dashboard-link">
                        <i class="fas fa-calendar-check text-primary"></i>
                        My Bookings
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>

                    <a href="/wishlist" class="dashboard-link">
                        <i class="fas fa-heart text-danger"></i>
                        Wishlist / Favorites
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>

                    <a href="#" class="dashboard-link" onclick="alert('Profile editing coming soon!'); return false;">
                        <i class="fas fa-cog text-secondary"></i>
                        Edit Profile
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>

                    <a href="/logout" class="dashboard-link">
                        <i class="fas fa-sign-out-alt text-danger"></i>
                        Log Out
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>