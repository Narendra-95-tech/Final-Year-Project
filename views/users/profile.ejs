<% layout("layouts/boilerplate") %>

    <style>
        :root {
            --primary-orange: #fe6b00;
            --primary-dark: #1a1a1a;
            --bg-light: #f8f9fa;
        }

        .profile-container {
            max-width: 1100px;
            margin: 40px auto 80px;
            padding: 0 20px;
        }

        /* Hero Header */
        .profile-hero {
            position: relative;
            background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
            border-radius: 24px;
            height: 280px;
            margin-bottom: 120px;
            overflow: visible;
        }

        .hero-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.1;
            background-image:
                radial-gradient(circle at 20% 30%, var(--primary-orange) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, var(--primary-orange) 0%, transparent 50%);
            border-radius: 24px;
        }

        .profile-avatar-wrapper {
            position: absolute;
            bottom: -70px;
            left: 50px;
            z-index: 5;
            display: flex;
            align-items: flex-end;
            gap: 25px;
        }

        .profile-avatar-large {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            border: 6px solid white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            background: white;
            object-fit: cover;
        }

        .profile-name-section {
            padding-bottom: 20px;
            color: white;
        }

        .profile-name-large {
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .profile-handle-large {
            font-size: 18px;
            opacity: 0.8;
            font-weight: 500;
        }

        /* Stats Bar */
        .profile-stats-bar {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
            display: flex;
            justify-content: space-around;
            margin-bottom: 40px;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .stat-box {
            text-align: center;
            flex: 1;
        }

        .stat-box:not(:last-child) {
            border-right: 1px solid #eee;
        }

        .stat-value {
            display: block;
            font-size: 28px;
            font-weight: 800;
            color: var(--primary-dark);
            line-height: 1;
            margin-bottom: 5px;
        }

        .stat-text {
            color: #888;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Content Layout */
        .profile-grid {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 30px;
        }

        @media (max-width: 992px) {
            .profile-grid {
                grid-template-columns: 1fr;
            }

            .profile-avatar-wrapper {
                left: 50%;
                transform: translateX(-50%);
                flex-direction: column;
                align-items: center;
                text-align: center;
                bottom: -100px;
            }

            .profile-hero {
                margin-bottom: 150px;
            }
        }

        .profile-side-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
            border: 1px solid #f0f0f0;
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--primary-dark);
        }

        .section-title i {
            color: var(--primary-orange);
            font-size: 20px;
        }

        .info-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f8f9fa;
        }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-label {
            color: #777;
            font-weight: 500;
        }

        .info-data {
            color: var(--primary-dark);
            font-weight: 600;
        }

        .bio-text {
            color: #555;
            line-height: 1.6;
            font-size: 15px;
            background: #fff8f4;
            padding: 20px;
            border-radius: 15px;
            border-left: 4px solid var(--primary-orange);
        }

        .social-pills {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .social-pill {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            transition: all 0.2s;
            background: #f0f0f0;
            color: #555;
            text-decoration: none;
        }

        .social-pill:hover {
            transform: translateY(-3px);
            color: white;
        }

        .pill-fb:hover {
            background: #1877f2;
        }

        .pill-tw:hover {
            background: #1da1f2;
        }

        .pill-ig:hover {
            background: #e4405f;
        }

        .action-btn {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            padding: 15px 20px;
            background: white;
            border: 1px solid #eee;
            border-radius: 12px;
            text-decoration: none;
            color: var(--primary-dark);
            font-weight: 600;
            margin-bottom: 12px;
            transition: all 0.2s;
        }

        .action-btn:hover {
            background: var(--bg-light);
            border-color: var(--primary-orange);
            color: var(--primary-orange);
            transform: translateX(5px);
        }

        .action-btn i:first-child {
            margin-right: 15px;
            width: 20px;
            text-align: center;
        }

        .badge-verified {
            background: #e6f7ef;
            color: #198754;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 4px 12px;
            border-radius: 100px;
            font-weight: 700;
        }

        .host-badge {
            background: #fff4e6;
            color: var(--primary-orange);
            font-size: 12px;
            padding: 5px 12px;
            border-radius: 100px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
    </style>

    <div class="profile-container">
        <!-- Hero Section -->
        <div class="profile-hero">
            <div class="hero-pattern"></div>
            <div class="profile-avatar-wrapper">
                <% if (user.avatar && user.avatar.url) { %>
                    <img src="<%= user.avatar.url %>" alt="Profile" class="profile-avatar-large">
                    <% } else { %>
                        <div class="profile-avatar-large d-flex align-items-center justify-content-center"
                            style="background: white; color: var(--primary-orange); font-size: 60px; font-weight: 800;">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </div>
                        <% } %>

                            <div class="profile-name-section">
                                <h1 class="profile-name-large">
                                    <%= user.username %>
                                        <% if(user.isVerified) { %>
                                            <i class="fas fa-check-circle text-info" style="font-size: 20px;"
                                                title="Verified Explorer"></i>
                                            <% } %>
                                </h1>
                                <div class="profile-handle-large">@<%= user.username.toLowerCase().replace(/\s/g, '' )
                                        %>
                                </div>
                                <div class="mt-2 d-flex gap-2">
                                    <span class="host-badge">
                                        <i class="fas fa-medal"></i> Wanderer Elite
                                    </span>
                                    <% if(user.isVerified) { %>
                                        <span class="badge-verified bg-info text-white border-0">
                                            <i class="fas fa-shield-check me-1"></i> Verified Explorer
                                        </span>
                                        <% } %>
                                </div>
                            </div>
            </div>
        </div>

        <!-- Stats Bar -->
        <div class="profile-stats-bar">
            <div class="stat-box">
                <span class="stat-value">
                    <%= bookingCount %>
                </span>
                <span class="stat-text">Bookings</span>
            </div>
            <div class="stat-box">
                <span class="stat-value">
                    <%= reviewCount %>
                </span>
                <span class="stat-text">Reviews</span>
            </div>
            <div class="stat-box">
                <span class="stat-value">
                    <%= favoritesCount %>
                </span>
                <span class="stat-text">Favorites</span>
            </div>
        </div>

        <div class="profile-grid">
            <!-- Sidebar -->
            <div class="profile-sidebar">
                <div class="profile-side-card">
                    <h2 class="section-title"><i class="fas fa-id-card"></i> About Me</h2>
                    <% if(user.bio) { %>
                        <p class="bio-text">
                            <%= user.bio %>
                        </p>
                        <% } else { %>
                            <p class="text-muted italic">No bio shared yet.</p>
                            <% } %>

                                <ul class="info-list mt-4">
                                    <li class="info-item">
                                        <span class="info-label">Location</span>
                                        <span class="info-data">
                                            <%= user.location || 'Unknown' %>
                                        </span>
                                    </li>
                                    <li class="info-item">
                                        <span class="info-label">Member since</span>
                                        <span class="info-data">
                                            <%= new Date(user.createdAt).getFullYear() %>
                                        </span>
                                    </li>
                                    <li class="info-item">
                                        <span class="info-label">Trust Status</span>
                                        <span class="info-data">
                                            <span
                                                class="badge-verified <%= user.verificationStatus === 'Verified' ? '' : 'bg-warning text-dark' %>">
                                                <%= user.verificationStatus==='None' ? 'Not Verified' :
                                                    user.verificationStatus %>
                                            </span>
                                        </span>
                                    </li>
                                </ul>

                                <% if(user.social && (user.social.facebook || user.social.twitter ||
                                    user.social.instagram)) { %>
                                    <div class="mt-4">
                                        <span class="info-label d-block mb-2">Connect</span>
                                        <div class="social-pills">
                                            <% if(user.social.facebook) { %>
                                                <a href="<%= user.social.facebook %>" target="_blank"
                                                    class="social-pill pill-fb"><i class="fab fa-facebook-f"></i></a>
                                                <% } %>
                                                    <% if(user.social.twitter) { %>
                                                        <a href="<%= user.social.twitter %>" target="_blank"
                                                            class="social-pill pill-tw"><i
                                                                class="fab fa-twitter"></i></a>
                                                        <% } %>
                                                            <% if(user.social.instagram) { %>
                                                                <a href="<%= user.social.instagram %>" target="_blank"
                                                                    class="social-pill pill-ig"><i
                                                                        class="fab fa-instagram"></i></a>
                                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="profile-main">
                <div class="profile-side-card">
                    <h2 class="section-title"><i class="fas fa-th-large"></i> Dashboard</h2>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="/bookings" class="action-btn">
                                <span><i class="fas fa-receipt text-primary"></i> My Bookings</span>
                                <i class="fas fa-chevron-right op-5"></i>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/wishlist" class="action-btn">
                                <span><i class="fas fa-heart text-danger"></i> Wishlist</span>
                                <i class="fas fa-chevron-right op-5"></i>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/profile/edit" class="action-btn">
                                <span><i class="fas fa-user-edit text-success"></i> Edit Profile</span>
                                <i class="fas fa-chevron-right op-5"></i>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/trust/wallet" class="action-btn">
                                <span><i class="fas fa-wallet text-warning"></i> My Wallet</span>
                                <span class="badge bg-light text-dark border">â‚¹<%= (user.walletBalance ||
                                        0).toLocaleString() %></span>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/trust/verify" class="action-btn">
                                <span><i class="fas fa-user-shield text-primary"></i> Verification</span>
                                <i class="fas fa-chevron-right op-5"></i>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/profile/reviews" class="action-btn">
                                <span><i class="fas fa-star text-warning"></i> My Reviews</span>
                                <span class="badge bg-light text-dark border">
                                    <%= reviewCount %>
                                </span>
                                <i class="fas fa-chevron-right op-5 ms-auto"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="profile-side-card">
                    <h2 class="section-title"><i class="fas fa-star text-warning"></i> Badges & Achievements</h2>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="text-center">
                            <div
                                style="width: 60px; height: 60px; background: #fff4e6; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 8px; color: #fe6b00; border: 2px solid #fe6b00;">
                                <i class="fas fa-seedling"></i>
                            </div>
                            <span style="font-size: 11px; font-weight: 700; color: #555;">Level 1</span>
                        </div>
                        <div class="text-center" style="opacity: 0.4;">
                            <div
                                style="width: 60px; height: 60px; background: #eee; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 8px; color: #888;">
                                <i class="fas fa-fire"></i>
                            </div>
                            <span style="font-size: 11px; font-weight: 700; color: #888;">Explorer</span>
                        </div>
                    </div>
                </div>

                <!-- My Reviews Section Removed (Moved to dedicated page) -->

                <a href="/logout" class="btn btn-outline-danger w-100 rounded-pill py-3 fw-bold mt-2">
                    <i class="fas fa-sign-out-alt me-2"></i> Sign Out of WanderLust
                </a>
            </div>
        </div>
    </div>