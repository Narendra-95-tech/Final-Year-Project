      height: 56px;
    }

    .container-fluid {
      padding: 0 12px;
    }

    .navbar-brand {
      font-size: 20px;
    }

    .navbar-brand i {
      font-size: 22px !important;
      margin-right: 5px !important;
    }

    .navbar-collapse {
      top: 56px;
      padding: 15px;
    }

    .search-inp {
      padding: 0 15px;
    }

    .search-submit-btn span {
      display: none;
    }

