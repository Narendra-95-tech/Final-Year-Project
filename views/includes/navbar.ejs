      font-size: 16px;
      border-radius: 12px;
      margin: 4px 0;
    }

    .vr-separator {
      display: none;
    }

    .btn-auth-signup,
    .btn-auth-login {
      display: block;
      text-align: center;
      margin: 10px 0;
      width: 100%;
      padding: 12px 24px;
      font-size: 16px;
    }

    .theme-toggle-btn {
      width: 44px;
      height: 44px;
      margin: 10px auto;
    }

    .user-dropdown-menu {
      position: static !important;
      transform: none !important;
      margin-top: 10px !important;
      box-shadow: none;
      border: 1px solid #eee;
    }

    .navbar-toggler {
      border: none;
      padding: 8px;
      min-width: 44px;
      min-height: 44px;
    }

    .navbar-toggler:focus {
      box-shadow: none;
    }
  }

  @media (max-width: 576px) {
