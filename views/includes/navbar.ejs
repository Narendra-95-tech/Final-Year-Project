</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/">
      <i class="fas fa-compass" style="margin-right: 10px; font-size: 32px; color: #fe6b00;"></i>
      WanderLust
    </a>

    <!-- Mobile Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Content -->
    <div class="collapse navbar-collapse" id="navbarContent">

      <!-- Central Search Bar -->
      <div class="search-container-wrapper">
        <form class="search-form" action="/search" method="GET" id="searchForm">
          <input type="text" class="search-inp" name="q" id="navSearchInp" placeholder="Search for anything anywhere..."
            value="<%= typeof query !== 'undefined' ? query : '' %>" autocomplete="off">
          <button type="button" class="clear-search-btn" id="navClearSearch"
            style="display: none; background: none; border: none; padding: 10px; color: #999; cursor: pointer;">
            <i class="fas fa-times"></i>
          </button>
          <button type="button" class="voice-btn" title="Search by Voice">
            <i class="fas fa-microphone"></i>
          </button>
          <button type="submit" class="search-submit-btn">
            <i class="fas fa-search"></i>
            <span>Search</span>
          </button>
        </form>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const form = document.getElementById('searchForm');
          const input = document.getElementById('navSearchInp');
          const path = window.location.pathname;

          if (path.startsWith('/vehicles')) {
            form.action = '/vehicles';
            input.placeholder = 'Search vehicles...';
          } else if (path.startsWith('/dhabas')) {
            form.action = '/dhabas';
            input.placeholder = 'Search dhabas...';
          } else if (path.startsWith('/listings')) {
            form.action = '/listings';
            input.placeholder = 'Search stays...';
          } else {
            form.action = '/search';
            input.placeholder = 'Search for anything anywhere...';
          }
        });
        // Clear Search Logic for Navbar
        const navInput = document.getElementById('navSearchInp');
        const navClearBtn = document.getElementById('navClearSearch');

        if (navInput && navClearBtn) {
          const toggleClearBtn = () => {
            navClearBtn.style.display = navInput.value.trim().length > 0 ? 'block' : 'none';
          };

          navInput.addEventListener('input', toggleClearBtn);
          toggleClearBtn();

          navClearBtn.addEventListener('click', () => {
            navInput.value = '';
            toggleClearBtn();
            navInput.focus();
            if (window.location.search.includes('q=')) {
              const url = new URL(window.location);
              url.searchParams.delete('q');
              window.location.href = url.toString();
            }
          });
        }

        // Voice Search Implementation
        const voiceBtn = document.querySelector('.voice-btn');
        if (voiceBtn && navInput) {
          const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;

          if (SpeechRecognition) {
            const recognition = new SpeechRecognition();
            recognition.continuous = false;
            recognition.lang = 'en-US';
            recognition.interimResults = true;
            recognition.maxAlternatives = 1;

            // Create Voice Overlay UI
            const overlay = document.createElement('div');
            overlay.className = 'voice-overlay';
            overlay.innerHTML = `
              <div class="voice-overlay-content">
                <div class="voice-mic-pulse">
                  <i class="fas fa-microphone"></i>
                </div>
                <h3 id="voice-status">Listening...</h3>
                <div class="voice-transcript-preview" id="voice-preview">...</div>
                <p class="voice-hint">Try saying "Villa in Mumbai" or "SUV in Delhi"</p>
                <button class="voice-close-btn">&times;</button>
              </div>
            `;
            document.body.appendChild(overlay);

            const micPulse = overlay.querySelector('.voice-mic-pulse');
            const statusText = document.getElementById('voice-status');
            const previewText = document.getElementById('voice-preview');
            const closeBtn = overlay.querySelector('.voice-close-btn');

            recognition.onstart = () => {
              overlay.classList.add('active');
              micPulse.classList.add('pulsing');
              statusText.textContent = 'Listening...';
              previewText.textContent = 'Speak now...';
            };

            recognition.onresult = (event) => {
              let interimTranscript = '';
              let finalTranscript = '';

              for (let i = event.resultIndex; i < event.results.length; ++i) {
                if (event.results[i].isFinal) {
                  finalTranscript += event.results[i][0].transcript;
                } else {
                  interimTranscript += event.results[i][0].transcript;
                }
              }

              if (finalTranscript) {
                navInput.value = finalTranscript;
                previewText.textContent = finalTranscript;
                statusText.textContent = 'Analyzing magic... ðŸ”®';
                micPulse.classList.remove('pulsing');

                // VOICE 2.0: Let the AI decide the intent
                setTimeout(() => {
                  overlay.classList.remove('active');
                  const form = document.getElementById('searchForm');
                  if (form) {
                    // Pre-process for better search (simulated intent extraction)
                    if (finalTranscript.toLowerCase().includes('stay') || finalTranscript.toLowerCase().includes('villa')) {
                      form.action = '/listings';
                    } else if (finalTranscript.toLowerCase().includes('vehicle') || finalTranscript.toLowerCase().includes('car')) {
                      form.action = '/vehicles';
                    } else if (finalTranscript.toLowerCase().includes('dhaba') || finalTranscript.toLowerCase().includes('food')) {
                      form.action = '/dhabas';
                    }
                    form.submit();
                  }
                }, 1200);
              } else {
                previewText.textContent = interimTranscript;
              }
            };

            recognition.onerror = (event) => {
              overlay.classList.remove('active');
              console.error('Speech recognition error:', event.error);
              if (event.error === 'not-allowed') {
                alert('Microphone access was denied. Please allow microphone access in your browser settings.');
              }
            };

            voiceBtn.addEventListener('click', () => {
              recognition.start();
            });

            closeBtn.addEventListener('click', () => {
              recognition.stop();
              overlay.classList.remove('active');
            });
          } else {
            voiceBtn.style.opacity = '0.5';
            voiceBtn.title = 'Voice search not supported in this browser';
            voiceBtn.addEventListener('click', () => {
              alert('Voice search is not supported in your browser. Please try Chrome or Edge.');
            });
          }
        }
      </script>

      <style>
