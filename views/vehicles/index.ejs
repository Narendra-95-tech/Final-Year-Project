<% layout("/layouts/boilerplate") -%>

  <!-- Link Premium CSS -->
  <link rel="stylesheet" href="/css/vehicle-premium.css">

  <!-- Premium Hero Section -->
  <section class="vehicle-premium-hero">
    <div class="hero-content" data-aos="fade-up">
      <h1>Find the Perfect Wheels</h1>
      <p class="lead">Rent from local hosts and explore the road your way.</p>
    </div>
  </section>

  <!-- Fast Search Overlap -->
  <div class="container position-relative">
    <div class="vehicle-fast-search" data-aos="zoom-in" data-aos-delay="200">
      <div class="search-field flex-grow-1" style="position: relative;">
        <span class="search-label">Where</span>
        <input type="text" class="search-input" placeholder="City or airport" id="search-location"
          value="<%= query || '' %>" style="padding-right: 35px;">
        <button type="button" id="vehicleVoiceBtn" title="Search by Voice"
          style="background: none; border: none; position: absolute; right: 40px; top: 50%; transform: translateY(-10%); color: #ff385c; cursor: pointer;">
          <i class="fas fa-microphone"></i>
        </button>
        <button type="button" id="vehicleClearSearch"
          style="display: none; background: none; border: none; position: absolute; right: 10px; top: 50%; transform: translateY(-10%); color: #999; cursor: pointer;">
          <i class="fas fa-times-circle"></i>
        </button>
      </div>
      <div class="search-field">
        <span class="search-label">Type</span>
        <select class="search-input bg-transparent" id="search-type">
          <option value="all">All Vehicles</option>
          <option value="Car" <%=vehicleType==='Car' ? 'selected' : '' %>>Cars</option>
          <option value="SUV" <%=vehicleType==='SUV' ? 'selected' : '' %>>SUVs</option>
          <option value="Bike" <%=vehicleType==='Bike' ? 'selected' : '' %>>Bikes</option>
          <option value="Van" <%=vehicleType==='Van' ? 'selected' : '' %>>Vans</option>
          <option value="Luxury" <%=vehicleType==='Luxury' ? 'selected' : '' %>>Luxury</option>
        </select>
      </div>
      <div class="search-field d-none d-md-block">
        <span class="search-label">Seats</span>
        <input type="number" class="search-input" placeholder="Min seats" id="search-seats" value="<%= seats || '' %>"
          min="1">
      </div>
      <button class="search-btn" onclick="executeFastSearch()">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </div>

  <div class="container mt-5 pt-4">
    <!-- Category Hub -->
    <div class="vehicle-category-hub" data-aos="fade-up">
      <div class="category-item <%= !vehicleType || vehicleType === 'all' ? 'active' : '' %>"
        onclick="setFilter('vehicleType', 'all')">
        <div class="category-icon"><i class="fas fa-border-all"></i></div>
        <span class="category-label">All</span>
      </div>
      <div class="category-item <%= vehicleType === 'Car' ? 'active' : '' %>" onclick="setFilter('vehicleType', 'Car')">
        <div class="category-icon"><i class="fas fa-car-side"></i></div>
        <span class="category-label">Cars</span>
      </div>
      <div class="category-item <%= vehicleType === 'SUV' ? 'active' : '' %>" onclick="setFilter('vehicleType', 'SUV')">
        <div class="category-icon"><i class="fas fa-shuttle-van"></i></div>
        <span class="category-label">SUVs</span>
      </div>
      <div class="category-item <%= vehicleType === 'Bike' ? 'active' : '' %>"
        onclick="setFilter('vehicleType', 'Bike')">
        <div class="category-icon"><i class="fas fa-motorcycle"></i></div>
        <span class="category-label">Bikes</span>
      </div>
      <div class="category-item <%= vehicleType === 'Van' ? 'active' : '' %>" onclick="setFilter('vehicleType', 'Van')">
        <div class="category-icon"><i class="fas fa-van-shuttle"></i></div>
        <span class="category-label">Vans</span>
      </div>
      <div class="category-item <%= vehicleType === 'Luxury' ? 'active' : '' %>"
        onclick="setFilter('vehicleType', 'Luxury')">
        <div class="category-icon"><i class="fas fa-crown"></i></div>
        <span class="category-label">Luxury</span>
      </div>
    </div>

    <!-- Header Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
      <div>
        <h2 class="fw-bold mb-0">Browse Vehicles</h2>
        <p class="text-muted">
          <%= allVehicles.length %> vehicles available in <%= query || 'current area' %>
        </p>
      </div>
      <% if (currUser) { %>
        <a href="/vehicles/new" class="btn btn-outline-dark rounded-pill px-4">
          <i class="fas fa-plus me-2"></i>List your vehicle
        </a>
        <% } %>
    </div>

    <!-- Vehicles Grid -->
    <% if (allVehicles.length> 0) { %>
      <div class="row g-4 mb-5">
        <% for (let vehicle of allVehicles) { %>
          <div class="col-lg-4 col-md-6" data-aos="fade-up">
            <div class="premium-vehicle-card">
              <div class="card-img-wrapper">
                <% const getVehicleImage=(v)=> {
                  if (v.image && v.image.url) return v.image.url;
                  return
                  `https://images.unsplash.com/photo-1503376785-2acd3d0a0821?ixlib=rb-4.0.3&w=800&h=600&fit=crop`;
                  };
                  %>
                  <img src="<%= getVehicleImage(vehicle) %>" alt="<%= vehicle.title %>" loading="lazy">
                  <% if(vehicle.averageRating>= 4.5) { %>
                    <div class="card-badge"><i class="fas fa-star text-warning me-1"></i> Top Rated</div>
                    <% } %>
                      <button class="card-wishlist" data-id="<%= vehicle._id %>"
                        onclick="toggleWishlist(this, '<%= vehicle._id %>', 'vehicle')">
                        <i class="far fa-heart"></i>
                      </button>
              </div>

              <div class="card-content">
                <div class="card-price-row d-flex justify-content-between align-items-center">
                  <div>
                    <span class="card-price-tag">â‚¹<%= vehicle.price ? Number(vehicle.price).toLocaleString("en-IN")
                        : "N/A" %></span>
                    <span class="card-price-unit">/ day</span>
                  </div>
                  <% if(vehicle.averageRating) { %>
                    <div class="rating-mini">
                      <i class="fas fa-star text-warning fs-xs"></i> <b>
                        <%= vehicle.averageRating %>
                      </b>
                    </div>
                    <% } %>
                </div>

                <h3 class="card-title text-truncate">
                  <%= vehicle.title %>
                </h3>

                <p class="text-muted small mb-3">
                  <i class="fas fa-map-marker-alt me-1"></i>
                  <%= vehicle.location %>, <%= vehicle.country %>
                </p>

                <!-- Spec Bar -->
                <div class="card-spec-bar">
                  <div class="spec-pill" title="Seats">
                    <i class="fas fa-user-friends"></i>
                    <%= vehicle.seats || 5 %>
                  </div>
                  <div class="spec-pill" title="Transmission">
                    <i class="fas fa-cog"></i>
                    <%= vehicle.transmission==='automatic' ? 'AT' : 'MT' %>
                  </div>
                  <div class="spec-pill" title="Fuel">
                    <i class="fas fa-gas-pump"></i>
                    <%= (vehicle.fuelType || 'Petrol' ).charAt(0).toUpperCase() %>
                  </div>
                </div>

                <div class="d-grid mt-3">
                  <a href="/vehicles/<%= vehicle._id %>" class="btn btn-dark rounded-pill py-2">
                    Check Availability
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% } %>
      </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="fas fa-car-side fa-4x text-muted mb-3 opacity-25"></i>
          <h3 class="fw-bold">No vehicles found</h3>
          <p class="text-muted">Try adjusting your filters or search location.</p>
          <a href="/vehicles" class="btn btn-orange rounded-pill mt-3 px-4">Clear All Filters</a>
        </div>
        <% } %>
  </div>

  <script>
    function executeFastSearch() {
      const loc = document.getElementById('search-location').value;
      const type = document.getElementById('search-type').value;
      const seats = document.getElementById('search-seats').value;

      const url = new URL(window.location);
      if (loc) url.searchParams.set('q', loc); else url.searchParams.delete('q');
      if (type && type !== 'all') url.searchParams.set('vehicleType', type); else url.searchParams.delete('vehicleType');
      if (seats) url.searchParams.set('seats', seats); else url.searchParams.delete('seats');

      window.location.href = url.toString();
    }

    function setFilter(type, value) {
      const url = new URL(window.location);
      if (value === 'all' || !value) {
        url.searchParams.delete(type);
      } else {
        url.searchParams.set(type, value);
      }
      window.location.href = url.toString();
    }

    document.addEventListener('DOMContentLoaded', function () {
      if (typeof AOS !== 'undefined') {
        AOS.init({
          duration: 800,
          once: true
        });
      }

      // Smooth scroll for categories
      const hub = document.querySelector('.vehicle-category-hub');
      if (hub) {
        hub.addEventListener('wheel', (evt) => {
          evt.preventDefault();
          hub.scrollLeft += evt.deltaY;
        });
      }

      // Clear search logic
      const vehicleInput = document.getElementById('search-location');
      const vehicleClearBtn = document.getElementById('vehicleClearSearch');
      if (vehicleInput && vehicleClearBtn) {
        const toggleVehicleClear = () => {
          vehicleClearBtn.style.display = vehicleInput.value.trim().length > 0 ? 'block' : 'none';
        };
        vehicleInput.addEventListener('input', toggleVehicleClear);
        toggleVehicleClear();
        vehicleClearBtn.addEventListener('click', () => {
          vehicleInput.value = '';
          toggleVehicleClear();
          vehicleInput.focus();
          if (window.location.search.includes('q=')) {
            executeFastSearch();
          }
        });
      }

      // Vehicle Voice Search Logic
      const vehicleVoiceBtn = document.getElementById('vehicleVoiceBtn');
      if (vehicleVoiceBtn && vehicleInput) {
        vehicleVoiceBtn.addEventListener('click', () => {
          startVehicleVoiceSearch(vehicleInput);
        });
      }

      function startVehicleVoiceSearch(targetInput) {
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        if (!SpeechRecognition) return;

        const recognition = new SpeechRecognition();
        recognition.continuous = false;
        recognition.lang = 'en-US';
        recognition.interimResults = true;

        const overlay = document.querySelector('.voice-overlay');
        const statusText = document.getElementById('voice-status');
        const previewText = document.getElementById('voice-preview');
        const micPulse = document.querySelector('.voice-mic-pulse');

        recognition.onstart = () => {
          overlay.classList.add('active');
          micPulse.classList.add('pulsing');
          statusText.textContent = 'Listening...';
          previewText.textContent = 'Speak now...';
        };

        recognition.onresult = (event) => {
          let interimTranscript = '';
          let finalTranscript = '';
          for (let i = event.resultIndex; i < event.results.length; ++i) {
            if (event.results[i].isFinal) finalTranscript += event.results[i][0].transcript;
            else interimTranscript += event.results[i][0].transcript;
          }
          if (finalTranscript) {
            targetInput.value = finalTranscript;
            previewText.textContent = finalTranscript;
            statusText.textContent = 'Searching...';
            setTimeout(() => {
              overlay.classList.remove('active');
              executeFastSearch();
            }, 800);
          } else {
            previewText.textContent = interimTranscript;
          }
        };

        recognition.onerror = () => overlay.classList.remove('active');
        recognition.start();
      }
    });
  </script>
  <script src="/js/wishlist-handler.js"></script>