<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust - Add Vehicle</title>
</head>

<body>
    <% layout("layouts/boilerplate") %>
        <link rel="stylesheet" href="/css/vehicle-image-upload.css">
        <script src="/js/vehicle-image-upload.js" defer></script>
        <div class="row mt-3">
            <div class="col-8 offset-2">

                <h3>Add New Vehicle</h3>
                <form method="POST" action="/vehicles" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="vehicle[title]" placeholder="2023 Honda City" type="text" class="form-control"
                            required />
                        <div class="valid-feedback">Title looks good!</div>

                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="vehicle[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Vehicle Images (Max 5)</label>
                        <div class="image-upload-container">
                            <input name="vehicle[images]" type="file" class="form-control" id="imageInput" multiple
                                accept="image/*" max="5">
                            <div class="upload-preview" id="uploadPreview"></div>
                        </div>
                        <div class="form-text">You can upload up to 5 images. First image will be the cover.</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6 position-relative">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label for="price" class="form-label mb-0">Price per day (₹)</label>
                                <button type="button" id="getAiPrice" class="btn btn-sm glass hover-lift"
                                    style="font-size: 0.75rem; color: var(--primary-orange);">
                                    <i class="fas fa-magic me-1"></i> Get AI Price
                                </button>
                            </div>
                            <input name="vehicle[price]" id="price" placeholder="1500" class="form-control" required />
                            <div id="ai-price-hint" class="input-hint"
                                style="display: none; color: var(--primary-orange); font-size: 0.75rem; margin-top: 4px;">
                                <i class="fas fa-sparkles"></i> AI suggested this based on your details.
                            </div>
                            <div class="invalid-feedback">Price should be valid</div>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="vehicleType" class="form-label">Vehicle Type</label>
                            <select name="vehicle[vehicleType]" class="form-control" required>
                                <option value="">Select Type</option>
                                <option value="car">Car</option>
                                <option value="bike">Bike</option>
                                <option value="van">Van</option>
                                <option value="truck">Truck</option>
                                <option value="scooter">Scooter</option>
                            </select>
                            <div class="invalid-feedback">Please select vehicle type</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="brand" class="form-label">Brand</label>
                            <input name="vehicle[brand]" placeholder="Honda" type="text" class="form-control"
                                required />
                            <div class="invalid-feedback">Brand should be valid</div>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="model" class="form-label">Model</label>
                            <input name="vehicle[model]" placeholder="City" type="text" class="form-control" required />
                            <div class="invalid-feedback">Model should be valid</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="year" class="form-label">Year</label>
                            <input name="vehicle[year]" placeholder="2023" type="number" class="form-control" min="1900"
                                max="<%= new Date().getFullYear() + 1 %>" required />
                            <div class="invalid-feedback">Year should be valid</div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="seats" class="form-label">Seats</label>
                            <input name="vehicle[seats]" placeholder="5" type="number" class="form-control" min="1"
                                max="20" required />
                            <div class="invalid-feedback">Seats should be valid</div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="mileage" class="form-label">Mileage (km/l)</label>
                            <input name="vehicle[mileage]" placeholder="15.5" type="number" step="0.1"
                                class="form-control" min="0" />
                            <div class="invalid-feedback">Mileage should be valid</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="fuelType" class="form-label">Fuel Type</label>
                            <select name="vehicle[fuelType]" class="form-control" required>
                                <option value="">Select Fuel</option>
                                <option value="petrol">Petrol</option>
                                <option value="diesel">Diesel</option>
                                <option value="electric">Electric</option>
                                <option value="hybrid">Hybrid</option>
                            </select>
                            <div class="invalid-feedback">Please select fuel type</div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="transmission" class="form-label">Transmission</label>
                            <select name="vehicle[transmission]" class="form-control" required>
                                <option value="">Select Transmission</option>
                                <option value="manual">Manual</option>
                                <option value="automatic">Automatic</option>
                            </select>
                            <div class="invalid-feedback">Please select transmission</div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="availability" class="form-label">Availability</label>
                            <select name="vehicle[availability]" class="form-control">
                                <option value="true">Available</option>
                                <option value="false">Not Available</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="features" class="form-label">Features (comma separated)</label>
                        <textarea name="vehicle[features]" placeholder="AC, GPS, Music System, Airbags"
                            class="form-control"></textarea>
                        <div class="form-text">Enter features separated by commas</div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="vehicle[country]" placeholder="India" type="text" class="form-control" required />
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="vehicle[location]" placeholder="Mumbai, Maharashtra" type="text"
                            class="form-control" required />
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>

                    <br><br>
                    <button class="btn btn-success add-bt mt-3">Add Vehicle</button>
                    <br><br>
                </form>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const aiBtn = document.getElementById('getAiPrice');
                const priceInput = document.getElementById('price');
                const aiHint = document.getElementById('ai-price-hint');

                if (aiBtn) {
                    aiBtn.addEventListener('click', async () => {
                        const title = document.querySelector('input[name="vehicle[title]"]').value;
                        const location = document.querySelector('input[name="vehicle[location]"]').value;
                        const type = document.querySelector('select[name="vehicle[vehicleType]"]').value;
                        const description = document.querySelector('textarea[name="vehicle[description]"]').value;

                        if (!title || !location) {
                            alert('Please enter a title and location first! ✨');
                            return;
                        }

                        aiBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Analyzing...';
                        aiBtn.disabled = true;

                        try {
                            const response = await fetch('/ai/magic/magic-price', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ title, location, type, description })
                            });
                            const data = await response.json();

                            if (data.suggestedPrice) {
                                priceInput.value = data.suggestedPrice;
                                aiHint.style.display = 'block';
                                aiHint.innerHTML = `<i class="fas fa-sparkles"></i> AI suggest ₹${data.suggestedPrice}: ${data.reasoning}`;
                                priceInput.classList.add('ai-updated');
                                setTimeout(() => priceInput.classList.remove('ai-updated'), 1000);
                            }
                        } catch (err) {
                            console.error('AI Price Error:', err);
                        } finally {
                            aiBtn.innerHTML = '<i class="fas fa-magic me-1"></i> Get AI Price';
                            aiBtn.disabled = false;
                        }
                    });
                }
            });
        </script>

        <style>
            .ai-updated {
                animation: pulse-price 1s ease-out;
            }

            @keyframes pulse-price {
                0% {
                    box-shadow: 0 0 0 0 rgba(254, 107, 0, 0.4);
                }

                70% {
                    box-shadow: 0 0 0 10px rgba(254, 107, 0, 0);
                }

                100% {
                    box-shadow: 0 0 0 0 rgba(254, 107, 0, 0);
                }
            }

            .glass {
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.2);
            }
        </style>
</body>

</html>