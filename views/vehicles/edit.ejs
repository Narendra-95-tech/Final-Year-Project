<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WanderLust - Edit Vehicle</title>
</head>

<body>
  <% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="/css/vehicle-image-upload.css">
    <script src="/js/vehicle-image-upload.js" defer></script>
    <div class="row mt-3">
      <div class="col-8  offset-2">
        <br>

        <h3>Edit Vehicle </h3>
        <form method="POST" action="/vehicles/<%=vehicle._id%>?_method=PUT" novalidate class="needs-validation"
          enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="vehicle[title]" value="<%=vehicle.title %>" type="text" class="form-control" required />
            <div class="valid-feedback">Title looks good!</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="vehicle[description]" class="form-control" required><%= vehicle.description %></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Current Images (Select to Delete)</label>
            <div class="existing-images-grid">
              <% if(vehicle.images && vehicle.images.length> 0) { %>
                <% vehicle.images.forEach((img, i)=> { %>
                  <div class="existing-image-item">
                    <img src="<%= img.url.replace('/upload', '/upload/w_200') %>" alt="Vehicle Image">
                    <div class="form-check">
                      <input class="delete-checkbox" type="checkbox" name="deleteImages[]" value="<%= img.filename %>"
                        id="img-<%= i %>">
                      <label class="delete-label" for="img-<%= i %>">DELETE</label>
                    </div>
                  </div>
                  <% }) %>
                    <% } else if(vehicle.image && vehicle.image.url) { %>
                      <div class="existing-image-item">
                        <img src="<%= vehicle.image.url.replace('/upload', '/upload/w_200') %>" alt="Vehicle Image">
                        <div class="form-check">
                          <input class="delete-checkbox" type="checkbox" name="deleteImages[]"
                            value="<%= vehicle.image.filename %>" id="img-0">
                          <label class="delete-label" for="img-0">DELETE</label>
                        </div>
                      </div>
                      <% } %>
            </div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload New Images (Add to existing)</label>
            <div class="image-upload-container">
              <input name="vehicle[images]" type="file" class="form-control" id="imageInput" multiple accept="image/*">
              <div class="upload-preview" id="uploadPreview"></div>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4 position-relative">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <label for="price" class="form-label mb-0">Price per day (₹)</label>
                <button type="button" id="getAiPrice" class="btn btn-sm glass hover-lift"
                  style="font-size: 0.75rem; color: var(--primary-orange);">
                  <i class="fas fa-magic me-1"></i> Get AI Price
                </button>
              </div>
              <input name="vehicle[price]" id="price" value="<%=vehicle.price %>" type="number" class="form-control"
                required />
              <div id="ai-price-hint" class="input-hint"
                style="display: none; color: var(--primary-orange); font-size: 0.75rem; margin-top: 4px;">
                <i class="fas fa-sparkles"></i> AI suggested this based on your details.
              </div>
              <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="vehicleType" class="form-label">Vehicle Type</label>
              <select name="vehicle[vehicleType]" class="form-control" required>
                <option value="">Select Type</option>
                <option value="car" <%=vehicle.vehicleType==='car' ? 'selected' : '' %>>Car</option>
                <option value="bike" <%=vehicle.vehicleType==='bike' ? 'selected' : '' %>>Bike</option>
                <option value="van" <%=vehicle.vehicleType==='van' ? 'selected' : '' %>>Van</option>
                <option value="truck" <%=vehicle.vehicleType==='truck' ? 'selected' : '' %>>Truck</option>
                <option value="scooter" <%=vehicle.vehicleType==='scooter' ? 'selected' : '' %>>Scooter</option>
              </select>
              <div class="invalid-feedback">Please select vehicle type</div>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="brand" class="form-label">Brand</label>
              <input name="vehicle[brand]" value="<%=vehicle.brand %>" type="text" class="form-control" required />
              <div class="invalid-feedback">Brand should be valid</div>
            </div>

            <div class="mb-3 col-md-6">
              <label for="model" class="form-label">Model</label>
              <input name="vehicle[model]" value="<%=vehicle.model %>" type="text" class="form-control" required />
              <div class="invalid-feedback">Model should be valid</div>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="year" class="form-label">Year</label>
              <input name="vehicle[year]" value="<%=vehicle.year %>" type="number" class="form-control" min="1900"
                max="<%= new Date().getFullYear() + 1 %>" required />
              <div class="invalid-feedback">Year should be valid</div>
            </div>

            <div class="mb-3 col-md-4">
              <label for="seats" class="form-label">Seats</label>
              <input name="vehicle[seats]" value="<%=vehicle.seats %>" type="number" class="form-control" min="1"
                max="20" required />
              <div class="invalid-feedback">Seats should be valid</div>
            </div>

            <div class="mb-3 col-md-4">
              <label for="mileage" class="form-label">Mileage (km/l)</label>
              <input name="vehicle[mileage]" value="<%=vehicle.mileage || '' %>" type="number" step="0.1"
                class="form-control" min="0" />
              <div class="invalid-feedback">Mileage should be valid</div>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="fuelType" class="form-label">Fuel Type</label>
              <select name="vehicle[fuelType]" class="form-control" required>
                <option value="">Select Fuel</option>
                <option value="petrol" <%=vehicle.fuelType==='petrol' ? 'selected' : '' %>>Petrol</option>
                <option value="diesel" <%=vehicle.fuelType==='diesel' ? 'selected' : '' %>>Diesel</option>
                <option value="electric" <%=vehicle.fuelType==='electric' ? 'selected' : '' %>>Electric</option>
                <option value="hybrid" <%=vehicle.fuelType==='hybrid' ? 'selected' : '' %>>Hybrid</option>
              </select>
              <div class="invalid-feedback">Please select fuel type</div>
            </div>

            <div class="mb-3 col-md-4">
              <label for="transmission" class="form-label">Transmission</label>
              <select name="vehicle[transmission]" class="form-control" required>
                <option value="">Select Transmission</option>
                <option value="manual" <%=vehicle.transmission==='manual' ? 'selected' : '' %>>Manual</option>
                <option value="automatic" <%=vehicle.transmission==='automatic' ? 'selected' : '' %>>Automatic</option>
              </select>
              <div class="invalid-feedback">Please select transmission</div>
            </div>

            <div class="mb-3 col-md-4">
              <label for="availability" class="form-label">Availability</label>
              <select name="vehicle[availability]" class="form-control">
                <option value="true" <%=vehicle.availability ? 'selected' : '' %>>Available</option>
                <option value="false" <%=!vehicle.availability ? 'selected' : '' %>>Not Available</option>
              </select>
            </div>
          </div>

          <div class="mb-3">
            <label for="features" class="form-label">Features (comma separated)</label>
            <textarea name="vehicle[features]"
              class="form-control"><%= vehicle.features ? vehicle.features.join(', ') : '' %></textarea>
            <div class="form-text">Enter features separated by commas</div>
          </div>

          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="vehicle[country]" value="<%=vehicle.country %>" type="text" class="form-control" required />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="vehicle[location]" value="<%=vehicle.location %>" type="text" class="form-control" required />
            <div class="invalid-feedback">Location should be valid</div>
          </div>

          <br><br>
          <button class="btn btn-success edit-btn mt-3">Update Vehicle</button>
        </form>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const aiBtn = document.getElementById('getAiPrice');
        const priceInput = document.getElementById('price');
        const aiHint = document.getElementById('ai-price-hint');

        if (aiBtn) {
          aiBtn.addEventListener('click', async () => {
            const title = document.querySelector('input[name="vehicle[title]"]').value;
            const location = document.querySelector('input[name="vehicle[location]"]').value;
            const type = document.querySelector('select[name="vehicle[vehicleType]"]').value;
            const description = document.querySelector('textarea[name="vehicle[description]"]').value;

            aiBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Analyzing...';
            aiBtn.disabled = true;

            try {
              const response = await fetch('/ai/magic/magic-price', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, location, type, description, currentPrice: priceInput.value })
              });
              const data = await response.json();

              if (data.suggestedPrice) {
                priceInput.value = data.suggestedPrice;
                aiHint.style.display = 'block';
                aiHint.innerHTML = `<i class="fas fa-sparkles"></i> AI suggest ₹${data.suggestedPrice}: ${data.reasoning}`;
                priceInput.classList.add('ai-updated');
                setTimeout(() => priceInput.classList.remove('ai-updated'), 1000);
              }
            } catch (err) {
              console.error('AI Price Error:', err);
            } finally {
              aiBtn.innerHTML = '<i class="fas fa-magic me-1"></i> Get AI Price';
              aiBtn.disabled = false;
            }
          });
        }
      });
    </script>

    <style>
      .ai-updated {
        animation: pulse-price 1s ease-out;
      }

      @keyframes pulse-price {
        0% {
          box-shadow: 0 0 0 0 rgba(254, 107, 0, 0.4);
        }

        70% {
          box-shadow: 0 0 0 10px rgba(254, 107, 0, 0);
        }

        100% {
          box-shadow: 0 0 0 0 rgba(254, 107, 0, 0);
        }
      }

      .glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
    </style>
</body>

</html>