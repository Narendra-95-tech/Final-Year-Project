        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const startDateInput = document.getElementById("booking-start-date");
                const endDateInput = document.getElementById("booking-end-date");
                const daysCount = document.getElementById("days-count");
                const baseTotal = document.getElementById("base-total");
                const finalTotal = document.getElementById("final-total");

                const pricePerDay = <%= (vehicle && vehicle.price) ? vehicle.price : 0 %>;

                const updatePrice = () => {
                    if (!startDateInput.value || !endDateInput.value) return;
                    const start = new Date(startDateInput.value);
                    const end = new Date(endDateInput.value);
                    const diff = Math.ceil((end - start) / (1000 * 60 * 60 * 24));

                    if (diff > 0) {
                        daysCount.innerText = diff;
                        const base = pricePerDay * diff;
                        baseTotal.innerText = `₹${base.toLocaleString()}`;
                        finalTotal.innerText = `₹${(base + 750).toLocaleString()}`;
                    }
                };

                if (startDateInput && endDateInput) {
                    const fpStart = flatpickr(startDateInput, {
                        minDate: "today",
                        dateFormat: "Y-m-d",
                        altInput: true,
                        altFormat: "D, d M",
                        disableMobile: "true",
                        static: true,
                        monthSelectorType: "static",
                        onChange: function (selectedDates, dateStr, instance) {
                            if (selectedDates.length > 0) {
                                fpEnd.set('minDate', selectedDates[0]);
                                setTimeout(() => fpEnd.open(), 100);
                            }
                            startDateInput.dispatchEvent(new Event('change'));
                        }
                    });

                    const fpEnd = flatpickr(endDateInput, {
                        minDate: "today",
                        dateFormat: "Y-m-d",
                        altInput: true,
                        altFormat: "D, d M",
                        disableMobile: "true",
                        static: true,
                        monthSelectorType: "static",
                        onChange: function (selectedDates, dateStr, instance) {
                            endDateInput.dispatchEvent(new Event('change'));
                        }
                    });

                    startDateInput.addEventListener("change", updatePrice);
                    endDateInput.addEventListener("change", updatePrice);
                }

                // Booking Form Submission
                const bookingForm = document.getElementById('vehicle-premium-booking-form');
                if (bookingForm) {
                    bookingForm.addEventListener('submit', async (e) => {
                        e.preventDefault();
                        const btn = e.target.querySelector('button');
                        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
                        btn.disabled = true;

                        const formData = new FormData(e.target);
                        const data = Object.fromEntries(formData.entries());

                        // Calculate price for payload
                        const pricePerDay = <%= (vehicle && vehicle.price) ? vehicle.price : 0 %>;
                        const start = new Date(data.startDate);
                        const end = new Date(data.endDate);
                        const diff = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
                        const totalPrice = (diff > 0 ? (pricePerDay * diff) + 750 : 0); // Base + Cleaning + Service (approx)

                        const payload = {
                            type: 'vehicle',
                            vehicleId: '<%= vehicle._id %>',
                            startDate: data.startDate,
                            endDate: data.endDate,
                            message: data.message,
                            totalPrice: totalPrice,
                            guests: 1 // Default for now
                        };

                        try {
                            const res = await fetch('/bookings/initiate', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify(payload)
                            });

                            const result = await res.json();
                            if (res.ok && result.success) {
                                // Redirect to Confirm and Pay page
                                window.location.href = result.redirectUrl;
                            } else {
                                alert(result.message || result.error || 'Booking failed');
                            }
                        } catch (err) {
                            console.error(err);
                            alert('Something went wrong');
                        } finally {
                            btn.innerHTML = 'Book Now';
                            btn.disabled = false;
                        }
                    });
                }

                // Initialize Image Gallery
                const images = vehicle.images && vehicle.images.length > 0
                    ? vehicle.images
                    : vehicle.image ? [vehicle.image] : [{ url: 'https://images.unsplash.com/photo-1503376785-2acd3d0a0821', caption: vehicle.title }];

                new ImageGallery('image-gallery-container', images);

                // Initialize Enhanced Map (like Dhabas)
                if (vehicle.geometry && vehicle.geometry.coordinates) {
                    const vehicleCoords = vehicle.geometry.coordinates;
                    const mapContainer = document.getElementById('map');

                    // Clear placeholder content
                    if (mapContainer) {
                        mapContainer.innerHTML = '';
                        mapContainer.className = 'map-container';
                    }

                    // Initialize EnhancedMap with search enabled
                    const enhancedMap = new EnhancedMap('map', {
                        mapToken: mapToken,
                        center: vehicleCoords,
                        zoom: 14,
                        searchEnabled: true,
                        clusterEnabled: false,
                        mapStyle: 'mapbox://styles/mapbox/streets-v12',
                        showControls: true
                    });

                    // Create custom marker element for vehicle
                    const markerEl = document.createElement('div');
                    markerEl.className = 'vehicle-custom-marker';
                    markerEl.innerHTML = '<i class="fas fa-car"></i>';

                    // Style the marker
                    Object.assign(markerEl.style, {
                        width: '50px',
                        height: '50px',
                        background: 'linear-gradient(135deg, #ff7675, #d63031)',
                        borderRadius: '50% 50% 50% 0',
                        transform: 'rotate(-45deg)',
                        display: 'flex',
                        alignItems: 'center',
                        justifyContent: 'center',
                        boxShadow: '0 4px 12px rgba(214, 48, 49, 0.4)',
                        border: '3px solid white',
                        cursor: 'pointer',
                        color: 'white',
                        fontSize: '20px'
                    });
                    markerEl.querySelector('i').style.transform = 'rotate(45deg)';

                    // Add marker to map
                    enhancedMap.addMarker('vehicle', vehicleCoords, {
                        customElement: markerEl,
                        title: vehicle.title,
                        description: `<div style="padding:4px;">
                            <h6 style="margin:0; font-weight:700;">${vehicle.title}</h6>
                            <span style="color:#717171; font-size:12px;">${vehicle.location}, ${vehicle.country}</span><br>
                            <span style="color:#00b894; font-weight:600; font-size:12px;">✓ Available for pickup</span>
                        </div>`,
                        popup: true,
                        offset: [0, -20]
                    });
                }

                // Initialize AOS if available
                if (typeof AOS !== 'undefined') {
                    AOS.init({ duration: 600, once: true });
                }
            });
        </script>