<% layout("/layouts/boilerplate") -%>

  <link rel="stylesheet" href="/css/search-premium.css">
  <style>
    :root {
      --stay-gradient: linear-gradient(135deg, #FF385C 0%, #E31C5F 100%);
      --vehicle-gradient: linear-gradient(135deg, #00C2FF 0%, #007aff 100%);
      --dhaba-gradient: linear-gradient(135deg, #FF9500 0%, #fe6b00 100%);
    }

    .search-hero {
      background: #f8f9fa;
      padding: 60px 0;
      border-bottom: 1px solid #eee;
      margin-bottom: 40px;
    }

    .result-section {
      margin-bottom: 60px;
    }

    .section-title-wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 25px;
      border-bottom: 2px solid #f0f0f0;
      padding-bottom: 15px;
    }

    .section-title {
      font-weight: 800;
      font-size: 1.75rem;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .section-badge {
      font-size: 0.9rem;
      padding: 6px 16px;
      border-radius: 50px;
      color: white;
      font-weight: 600;
    }

    .badge-stay {
      background: var(--stay-gradient);
    }

    .badge-vehicle {
      background: var(--vehicle-gradient);
    }

    .badge-dhaba {
      background: var(--dhaba-gradient);
    }

    .premium-result-card {
      border-radius: 20px;
      overflow: hidden;
      background: white;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      height: 100%;
      border: 1px solid #f0f0f0;
    }

    .premium-result-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    }

    .card-img-box {
      height: 200px;
      position: relative;
      overflow: hidden;
    }

    .card-img-box img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .premium-result-card:hover .card-img-box img {
      transform: scale(1.1);
    }

    .price-overlay {
      position: absolute;
      bottom: 15px;
      left: 15px;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(5px);
      color: white;
      padding: 5px 12px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.9rem;
    }

    .card-info {
      padding: 20px;
    }

    .card-tag {
      font-size: 0.75rem;
      text-transform: uppercase;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 8px;
      display: block;
    }

    .tag-stay {
      color: #FF385C;
    }

    .tag-vehicle {
      color: #007aff;
    }

    .tag-dhaba {
      color: #fe6b00;
    }

    .result-name {
      font-size: 1.15rem;
      font-weight: 700;
      margin-bottom: 8px;
      color: #222;
      line-height: 1.3;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .result-loc {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .empty-state {
      text-align: center;
      padding: 80px 20px;
      background: white;
      border-radius: 30px;
      border: 2px dashed #eee;
    }

    .empty-icon {
      font-size: 4rem;
      color: #ddd;
      margin-bottom: 20px;
    }
  </style>

  <div class="search-hero">
    <div class="container text-center">
      <h1 class="fw-bold mb-3">Global Search</h1>
      <p class="text-muted lead">
        Discover everything WanderLust has for "<strong>
          <%= query %>
        </strong>"
      </p>
      <div class="d-flex justify-content-center gap-2 mt-4">
        <span class="badge rounded-pill bg-light text-dark border px-3 py-2">
          üèòÔ∏è <%= listings.length %> Stays
        </span>
        <span class="badge rounded-pill bg-light text-dark border px-3 py-2">
          üöó <%= vehicles.length %> Wheels
        </span>
        <span class="badge rounded-pill bg-light text-dark border px-3 py-2">
          üçõ <%= dhabas.length %> Food
        </span>
      </div>
    </div>
  </div>

  <div class="container pb-5">

    <!-- STAYS SECTION -->
    <% if (listings && listings.length> 0) { %>
      <div class="result-section" data-aos="fade-up">
        <div class="section-title-wrapper">
          <h2 class="section-title">
            <i class="fas fa-home" style="color: #FF385C;"></i> Stays
          </h2>
          <span class="section-badge badge-stay">
            <%= listings.length %> matching
          </span>
        </div>
        <div class="row g-4">
          <% for (let listing of listings) { %>
            <div class="col-lg-3 col-md-6">
              <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                <div class="premium-result-card">
                  <div class="card-img-box">
                    <img src="<%= listing.image?.url %>" alt="<%= listing.title %>">
                    <div class="price-overlay">‚Çπ<%= listing.price.toLocaleString("en-IN") %> / night</div>
                  </div>
                  <div class="card-info">
                    <span class="card-tag tag-stay">
                      <%= listing.propertyType || 'VILLA' %>
                    </span>
                    <h3 class="result-name">
                      <%= listing.title %>
                    </h3>
                    <div class="result-loc">
                      <i class="fas fa-map-marker-alt"></i>
                      <%= listing.location %>
                    </div>
                  </div>
                </div>
              </a>
            </div>
            <% } %>
        </div>
      </div>
      <% } %>

        <!-- VEHICLES SECTION -->
        <% if (vehicles && vehicles.length> 0) { %>
          <div class="result-section" data-aos="fade-up">
            <div class="section-title-wrapper">
              <h2 class="section-title">
                <i class="fas fa-car" style="color: #007aff;"></i> Wheels
              </h2>
              <span class="section-badge badge-vehicle">
                <%= vehicles.length %> matching
              </span>
            </div>
            <div class="row g-4">
              <% for (let vehicle of vehicles) { %>
                <div class="col-lg-3 col-md-6">
                  <a href="/vehicles/<%= vehicle._id %>" class="text-decoration-none">
                    <div class="premium-result-card">
                      <div class="card-img-box">
                        <img
                          src="<%= vehicle.image?.url || 'https://images.unsplash.com/photo-1503376785-2acd3d0a0821?w=400' %>"
                          alt="<%= vehicle.title %>">
                        <div class="price-overlay">‚Çπ<%= (vehicle.price || 0).toLocaleString("en-IN") %> / day</div>
                      </div>
                      <div class="card-info">
                        <span class="card-tag tag-vehicle">
                          <%= vehicle.brand %>
                            <%= vehicle.model %>
                        </span>
                        <h3 class="result-name">
                          <%= vehicle.title %>
                        </h3>
                        <div class="result-loc">
                          <i class="fas fa-map-marker-alt"></i>
                          <%= vehicle.location %>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
                <% } %>
            </div>
          </div>
          <% } %>

            <!-- DHABAS SECTION -->
            <% if (dhabas && dhabas.length> 0) { %>
              <div class="result-section" data-aos="fade-up">
                <div class="section-title-wrapper">
                  <h2 class="section-title">
                    <i class="fas fa-utensils" style="color: #fe6b00;"></i> Food
                  </h2>
                  <span class="section-badge badge-dhaba">
                    <%= dhabas.length %> matching
                  </span>
                </div>
                <div class="row g-4">
                  <% for (let dhaba of dhabas) { %>
                    <div class="col-lg-3 col-md-6">
                      <a href="/dhabas/<%= dhaba._id %>" class="text-decoration-none">
                        <div class="premium-result-card">
                          <div class="card-img-box">
                            <img
                              src="<%= (dhaba.image && dhaba.image.length > 0) ? dhaba.image[0].url : 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=400' %>"
                              alt="<%= dhaba.title %>">
                            <div class="price-overlay">
                              <%= dhaba.cuisine %>
                            </div>
                          </div>
                          <div class="card-info">
                            <span class="card-tag tag-dhaba">
                              <%= dhaba.category %>
                            </span>
                            <h3 class="result-name">
                              <%= dhaba.title %>
                            </h3>
                            <div class="result-loc">
                              <i class="fas fa-map-marker-alt"></i>
                              <%= dhaba.location %>
                            </div>
                          </div>
                        </div>
                      </a>
                    </div>
                    <% } %>
                </div>
              </div>
              <% } %>

                <!-- EMPTY STATE -->
                <% if (totalResults===0) { %>
                  <div class="empty-state" data-aos="zoom-in">
                    <div class="empty-icon"><i class="fas fa-search"></i></div>
                    <h3>No matches for "<%= query %>"</h3>
                    <p class="text-muted">Try searching for a city, or a specific brand of car, or cuisine type.</p>
                    <div class="mt-4 d-flex justify-content-center gap-3">
                      <a href="/listings" class="btn btn-primary px-4">Stays</a>
                      <a href="/vehicles" class="btn btn-outline-primary px-4">Wheels</a>
                      <a href="/dhabas" class="btn btn-outline-warning px-4">Food</a>
                    </div>
                  </div>
                  <% } %>

  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof AOS !== 'undefined') {
        AOS.init({ duration: 800, once: true });
      }
    });
  </script>